.course-list {
  min-height: 100vh;
}
.course-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 240rpx;
  padding-left: 32rpx;
}
.course-avatar {
  width: 112rpx;
  height: 112rpx;
  margin-right: 24rpx;
  font-size: 0;
}
.course-content {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  flex: 1;
}
.course-content .author {
  flex-shrink: 0;
  margin-bottom: 24rpx;
  line-height: 1em;
  font-size: 40rpx;
  font-weight: 500;
}
.course-content .desc {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 1em;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0,0,0, 0.6);
}
.subscript {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
  width: 176rpx;
  margin-left: 24rpx;
  line-height: 32rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 915rpx 0 0 915rpx;
  background: rgba(255, 68, 51, 1);
  border: 1rpx solid transparent;
  color: white;
}
.subscript.disabled {
  background: white;
  border: 1rpx solid rgba(0,0,0,.2);
  color: rgba(0,0,0,.4)
}
.subscript:active {
  opacity: 0.8;
}
.subscript-icon {
  width: 30rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.course-item {
  display: flex;
  padding: 32rpx;
  position: relative
}
.mobile-button{
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 0;
  opacity: 0;
}
.mobile-button::after{
  display: none;
}
.item-left {
  position: relative;
  font-size: 0;
}
.item-left image {
  width: 192rpx;
  height: 192rpx;
  border-radius: 12rpx 4rpx 4rpx 12rpx;
}
.item-left .vip-only {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 20rpx;
  padding: 8rpx 10rpx;
  border-radius: 8rpx 0 6rpx 0;
  color: rgba(0,0,0,.8);
  background: linear-gradient(90deg,rgba(255,221,170,1) 0%,rgba(221,170,119,1) 100%);
}
.item-right {
  height: 192rpx;
  box-sizing: border-box;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0 10rpx 24rpx;
}
.item-right-top {
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: 500;
}
.item-right-middle {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0,0,0,.6)
}
.item-right-middle text {
  margin-right: 16rpx;
}
.class-dot {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin-right: 8rpx;
  border-radius: 915rpx;
  background: rgb(255, 68, 51);
}
.item-right-bottom {
  display: flex;
  align-items: center;
}
.item-right-bottom image {
  flex-shrink: 0;
  width: 56rpx;
  height: 56rpx;
  margin-right: 16rpx;
  border-radius: 915rpx;
  font-size: 0;
}
.item-right-bottom text {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(0,0,0,.8)
}
