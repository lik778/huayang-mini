/* subLive/coueseList/coueseList.wxss */
.van-tab {
  flex-basis: 20% !important;
  padding: 0 !important;
}

.course-list {
  min-height: 100vh;
}

.banner {
  padding: 40rpx 0;
  text-align: center;
}

.main {}

.course-item {
  display: flex;
  margin: 30rpx 40rpx;
  padding-bottom: 30rpx;
  border-bottom:1px solid #ddd;
  position: relative
}
.mobile-button{
  position: absolute;
  width: 100%;
  height: 100%;
  padding: 0;
  opacity: 0;
}
.mobile-button::after{
  display: none;
}
.item-left {
  position: relative;
}

.item-left image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 4px;
}

.item-left text {
  position: absolute;
  right: 0;
  top: 0;
  color: rgba(213, 179, 130, 1);
  font-size: 12px;
}

.item-right {
  padding-left: 20rpx;
}

.item-top {
  font-size: 14px;
  padding-top:10rpx;
  padding-bottom: 20rpx;
}

.item-middle {
  font-size: 12px;
  padding-bottom: 20rpx;
}

.item-live {
  color: #95F204;
}

.item-bottom {
  display: flex;
  align-items: center;
}

.item-bottom image {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;

}

.item-bottom text {
  padding-left: 10rpx;
  font-size: 12px;

}