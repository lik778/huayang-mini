.hidden-button {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: transparent;
}

.hidden-button::after {
    border: 0 none;
}

.limit-one-line {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.limit-two-line {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

/* 主题色 */
.subject-font-color {
    color: #CC0000 !important;
}

.subject-bg-color {
    background-color: #CC0000 !important;
}






/* 动画相关 */
.sliderUpAnimation {
    animation: sliderUpAnimate 0.3s linear;
}

.sliderDownAnimation {
    animation: sliderDownAnimate 0.3s linear forwards !important;
}

.fadeInAnimation {
    animation: fadeInAnimate 0.4s ease-in;
}

.fadeOutAnimation {
    animation: fadeOutAnimate 0.3s ease-out forwards;
}

.sharkAnimation {
    animation: shark 5s ease infinite;
}

/* 从下往上弹出 */
@keyframes sliderUpAnimate {
    from {
        transform: translateY(100%);
        opacity: 0.5;
    }

    to {
        transform: translateY(0%);
        opacity: 1;
    }
}

/* 从上往下隐藏 */
@keyframes sliderDownAnimate {
    from {
        transform: translateY(0%);
        opacity: 1;
    }

    to {
        transform: translateY(100%);
        opacity: 0;
    }
}


/* 从里往外显示 */
@keyframes fadeInAnimate {
    0% {
        transform: scale(0);
        opacity: 0;
    }

    25% {
        transform: scale(1);
        opacity: 0.7;
    }

    50% {
        transform: scale(1.01);
        opacity: 1;
    }

    75% {
        transform: scale(0.95);
        opacity: 1;
    }


    100% {
        transform: scale(1);
        opacity: 1;
    }
}


/* 从外往里消失 */
@keyframes fadeOutAnimate {
    0% {
        opacity: 1;
        transform: scale(1);
    }

    100% {
        opacity: 0;
        transform: scale(0);
    }
}


/* 按钮忽大忽小 */


@keyframes shark {
    0% {
        transform: scale(1);
    }

    4% {
        transform: scale(1.05);
    }

    8% {
        transform: scale(1);
    }

    12% {
        transform: scale(1.05);
    }

    16% {
        transform: scale(1);
    }
}