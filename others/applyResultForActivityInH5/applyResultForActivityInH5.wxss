/* others/applyResultForActivityInH5/applyResultForActivityInH5.wxss */
@import "../../assets/css/common.wxss";

.banner image {
  width: 100%;
  height: 376rpx;
  vertical-align: bottom;
}

.apply-result-title {
  font-size: 48rpx;
  margin-bottom: 48rpx;
  padding: 80rpx 30rpx 48rpx 30rpx;
  font-weight: 600;
  font-family: PingFangSC-Medium, PingFang SC;
  text-align: center;
  white-space: pre-wrap;
}

.pay-info {
  padding: 0 30rpx 48rpx 30rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}

.pay-info>view {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}

.pay-info-label {
  flex-shrink: 0;
}

.pay-info-value {
  display: inline-block;
}

.notice-title {
  text-align: center;
  font-size: 36rpx;
  margin-bottom: 100rpx;
  color: #000;
  line-height: 50rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  white-space: pre-wrap;
}

.add-teacher-button {
  width: calc(100% - 60rpx);
  height: 96rpx;
  border-radius: 999rpx;
  background-color: rgba(255, 68, 51, 1);
  text-align: center;
  line-height: 96rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  margin: 0 auto;
  margin-bottom: 60rpx;
}