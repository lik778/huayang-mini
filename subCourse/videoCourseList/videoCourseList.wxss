@import "../../assets/css/common.wxss";

.tabs-fixed-line {
  position: fixed;
  top: 0;
  width: 100%;
  height: 1px;
  background: white;
}

.type-list {
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  width: calc(100% - 80rpx);
  padding: 32rpx 50rpx 10rpx 30rpx;
  background: #fff;
}

.main-title-item {
  margin-right: 60rpx;
  font: 500 44rpx/60rpx PingFangSC;
  color: rgba(0, 0, 0, 1);
}

.main-title-item:last-child {
  margin-right: 0;
}

.active {
  position: relative;
  font: 500 44rpx/60rpx PingFangSC;
  color: #CC0000;
}

.active::after {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -8rpx;
  content: "";
  width: 84rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #CC0000;
}

/* 视频课程列表 */
.list-main {
  margin: 0 auto;
  padding: 130rpx 0 50rpx;
  width: calc(100% - 60rpx);
}

.list-none {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list-none image {
  width: 550rpx;
  height: 300rpx;
  vertical-align: bottom;
}

.list-none-text {
  font: 36rpx/36rpx PingFangSC;
  padding-left: 24rpx;
  color: rgba(0, 0, 0, 0.4);
}

.course-item {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.course-item:active {
  opacity: 0.9;
}

.course-image {
  width: 166rpx;
  height: 220rpx;
  font-size: 0;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.course-info {
  width: calc(100% - 190rpx);
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

