<!--subCourse/videoCourseList/videoCourseList.wxml-->
<view class="list">
  <view class="type-list">
    <view class="{{curentIndex===index?'main-title-item active':'main-title-item'}}" wx:for="{{titleList}}"
      wx:key="index" bindtap="changeTab" data-index="{{index}}">
      {{item}}
    </view>
  </view>
  <view class="list-main" wx:if="{{videoList.length>0}}">
    <view class="list-item" wx:for="{{videoList}}" wx:key="index" bindtap="toVideoCourseDetail" data-item="{{item}}">
      <view class="list-item-left">
        <image src="{{item.cover_pic}}" mode='aspectFill'></image>
      </view>
      <view class="list-item-right">
        <view class="list-item-right-top">
          <view class="video-course-name">{{item.name}}</view>
          <view
								class="{{item.category==='fitness'?'video-course-type video-course-type-one':item.category==='fashion'?'video-course-type video-course-type-two':'video-course-type video-course-type-three'}}">
								{{item.category==='fitness'?'健身':item.category==='fashion'?'时尚':'静心慢生活'}}
							</view>
        </view>
        <view class="list-item-right-bottom" wx:if="{{item.money!=='免费'}}">¥{{item.money}}</view>
        <view class="list-item-right-bottom" wx:if="{{item.money==='免费'}}">{{item.money}}</view>
      </view>
    </view>
  </view>
  <view class="list-main" wx:else>
    <view class="list-none">
      <image src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1599548149wNjJgb.jpg"></image>
      <view class="list-none-text">课程努力制作中!</view>
    </view>
  </view>
</view>