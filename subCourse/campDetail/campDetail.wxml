<!--subCourse/trainingCampDetail/trainingCampDetail.wxml-->
<view class="container" wx:if="{{campData!==''}}">
  <!-- 返回按钮 -->
  <view class="back-icon">
    <image src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1597131543zKwtZa.jpg"></image>
  </view>
  <!-- banner -->
  <view class="banner">
    <view class="banner-img">
      <image src="{{campData.cover_pic}}"></image>
    </view>
    <view class="camp-title">
      {{campData.name}}
    </view>
    <view class="camp-subtitle" wx:if="{{hasStartCampType===1}}">
      {{joinDate}} 敬请期待
    </view>
    <view class="camp-subtitle" wx:if="{{hasStartCampType===2}}">
      第 {{whatDay}}/{{campData.period}} 天
    </view>
    <view class="camp-subtitle" wx:if="{{hasStartCampType===3}}">
      常温故而知新哦
    </view>
  </view>
  <!-- 广告位 -->
  <view class="advertising">
    <swiper circular autoplay interval="3000" bindchange="changeAdvertisingIndex">
      <block wx:for="{{advertisingList}}" wx:key="*this">
        <swiper-item>
          <image src="{{item}}"></image>
        </swiper-item>
      </block>
    </swiper>
    <view class="dot-list" wx:if="{{advertisingList.length>1}}">
      <view wx:for="{{advertisingList}}" wx:key="{{index}}"
        class="{{index===advertisingIndex?'dot-item dot-active-item':'dot-item'}}"></view>
    </view>
  </view>
  <!-- 主体 -->
  <view class="main">
    <!-- 日历切换 -->
    <view class="calendar">
      <view class="calendar-left">
        今日：2020-10-22
      </view>
      <view class="calendar-right subject-font-color" bindtap="toChangeDate">
        查看更多课程
      </view>
    </view>
    <!-- 视频播放器 -->
    <view class="video-player" wx:if="{{videoData.src!==''}}">
      <view class="video-box">
        <video id="video" show-center-play-btn="{{false}}" bindfullscreenchange="enterFull"
          src="{{videoData.src}}"></video>
        <image src="{{videoData.pic}}" wx:if="{{showCover}}" class="video-cover"></image>
        <image src="/assets/images/common/play.png" wx:if="{{showPlayIcon}}" class="video-play" bindtap="playVideo">
        </image>
      </view>
    </view>
    <!-- 课程列表 -->
    <view class="course-list">
      <view class="course-item" wx:for="{{courseList}}" wx:key="*this" bindtap="toCoursedetail" data-item="{{item}}">
        <view class="course-item-left">
          <image src="{{iconSrcList.course}}" wx:if="{{item.type==='kecheng'}}"></image>
          <image src="{{iconSrcList.video}}" wx:if="{{item.type==='video'}}"></image>
          <image src="{{iconSrcList.product}}" wx:if="{{item.type==='product'}}"></image>
          <image src="{{iconSrcList.url}}" wx:if="{{item.type==='url'}}"></image>
        </view>
        <view class="course-item-right">
          <view class="course-item-msg">
            <view class="course-item-right-top" wx:if="{{item.type==='url'}}">{{item.title}}</view>
            <view class="course-item-right-top" wx:else>{{item.name}}</view>
            <view class="course-item-right-bottom" wx:if='{{item.type==="kecheng"}}'>{{item.duration}}</view>
          </view>
          <view class="course-item-study subject-bg-color" wx:if="{{item.type==='url'}}">前往</view>
          <view class="course-item-study subject-bg-color" wx:else>练习
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- 添加班主任 -->
  <view class="publicity" bindtap="toArticleLink">
    <image src="/assets/images/common/wechat.png"></image>
    <text>点击添加班主任微信</text>
  </view>
</view>