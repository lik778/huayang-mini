/* subCourse/campDetail/campDetail.wxss */
.campdetail {
  padding-bottom: 120rpx;

}

.detail image {
  width: 100%;
}

.bg {
  /* background: #5f5f5f; */
  /* height: 272rpx; */
  height: 400rpx;
  position: relative;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

.bg .backLast {
  position: fixed;
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  left: 16rpx;
  top: 90rpx;
}

.bg-title {
  font-size: 52rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 74rpx;
  position: absolute;
  left: 30rpx;
  bottom: 110rpx;
}

.bg-subtitle {
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 50rpx;
  position: absolute;
  left: 30rpx;
  bottom: 40rpx;
}

.date {
  width: 100%;
  height: 228rpx;
  position: relative;
  background: #fff;
}

.week-line {
  padding: 0 26rpx;
  display: flex;
  justify-content: space-between;
  width: calc(100% - 52rpx);
  position: absolute;
  left: 0;
  top: 0;
  height: 124rpx;
  z-index: 10;
  background: #fff;
}


.week-line text {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 21px;
  padding-top: 50rpx;
}

.date-line {
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  padding-bottom: 40rpx;
  box-shadow: 0px 4rpx 14rpx 0px rgba(0, 0, 0, 0.1);
  width: calc(100% - 48rpx);
  position: absolute;
  left: 0;
  top: 124rpx;
  z-index: 5;
}

.date-line>view {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  text-align: center;
}

.date-line>view image {
  position: absolute;
  bottom: -60rpx;
  width: 32rpx;
  height: 38rpx;
  left: 50%;
  transform: translateX(-50%);
}

.date-line .sub-active text {
  color: #000000;
  background: #F4F4F4;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 64rpx;
  display: inline-block;
}

.date-line text {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #888888;
  line-height: 64rpx;
  display: inline-block;
}

.bg-color {
  width: 100%;
  height: 20rpx;
  background: #F9F9F9;
}

.camp-container {}

.video {
  width: calc(100% - 60rpx);
  margin: 0 auto;
  margin-top: 15px;
  height: 194px;
  position: relative;
}

.video-cover {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 194px;
  display: flex;
  border-radius: 8rpx;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.52);
}

.video-cover image {
  width: 130rpx;
  height: 130rpx;
}

.video video {
  width: 100%;
  border-radius: 8rpx;
}

.course-list {
  border-bottom: 1px solid #F2F2F2;
  margin-top: 10rpx;
}

.course-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 54rpx;
  height: 144rpx;
}

.course-item-left {
  width: 62rpx;
  height: 62rpx;
  background: rgba(247, 247, 248, 1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}


.course-item-left image {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

.course-item-left .lock-icon {
  width: 30rpx;
  height: 34rpx;
  vertical-align: bottom;
}

.course-item-right {
  width: calc(100% - 86rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 144rpx;
  border-bottom: 1px solid #F2F2F2;
}

.course-item:last-child .course-item-right {
  border: none
}

.course-item-right-left {
  display: flex;
  flex-direction: column;
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 56rpx;
}

.course-time {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(109, 109, 109, 1);
  line-height: 44rpx;
  margin-top: 4rpx;
}

.course-item-right-right {
  padding-right: 50rpx;
}

.course-item-right-right text {
  display: inline-block;
  width: 130rpx;
  height: 60rpx;
  background: rgba(204, 0, 0, 1);
  border-radius: 30rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
  text-align: center;
}

.course-item-right-right .canshow {
  background: #CDCDCD;
  color: #FFFFFF;
}

.bottom-bg {
  position: fixed;
  height: 120rpx;
  display: flex;
  align-items: center;
  background: #fff;
  justify-content: center;
  width: 100vw;
  left: 0;
  bottom: 0;
}

.bottom {
  position: fixed;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100vw;
  left: 0;
  bottom: 0;
  z-index: 60;
}

.button {
  width: calc(100% - 60rpx);
  height: 96rpx;
  background: rgba(8, 192, 99, 1);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.button image {
  width: 62rpx;
  height: 50rpx;
  vertical-align: bottom;
  margin-right: 20rpx;
}

.button text {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
}

.cover-bg {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.56);
  z-index: 50;
}

.cover-bg-box {
  position: relative;
  width: 100%;
  height: 100%;
}

.cover-text {
  position: absolute;
  left: 50%;
  bottom: 298rpx;
  transform: translateX(-50%);
  font-size: 56rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 80rpx;
}

.cover-bg image {
  position: absolute;
  left: 50%;
  bottom: 148rpx;
  transform: translateX(-50%);
  width: 52rpx;
  height: 126rpx;
}
