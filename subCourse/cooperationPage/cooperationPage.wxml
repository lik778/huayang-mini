<view class="container">
  <!-- banner -->
  <view class="banner">
    <swiper class="swiper" bindchange="changeCurrentBannerIndex" circular autoplay interval='3000'>
      <block wx:for='{{bannerList}}' wx:key="index">
        <swiper-item>
          <image src="{{item.url}}"></image>
        </swiper-item>
      </block>
    </swiper>
    <view class="dots-list">
      <view class="{{currentBannerIndex===index?'dots-item dots-item-active':'dots-item'}}" wx:for='{{bannerList}}'
        wx:key="index"></view>
    </view>
  </view>
  <!-- logo -->
  <view class="{{logoStyle===0?'logo':'logo logo1'}}">
    <image class="logo-one" src="{{bannerList[0].url}}"></image>
    <image class="logo-two" src="{{bannerList[1].url}}"></image>
  </view>
  <!-- 介绍 -->
  <view class="desc">花样大学和浦锦街道合作，每月给大家送课啦，本月免费课程一起来学习吧！</view>
  <!-- 课程列表 -->
  <view class="course-list">
    <view class="course-list-title">免费精品课</view>
    <view class="course-item">
      <view class="course-item-left">
        <image src="{{bannerList[1].url}}"></image>
      </view>
      <view class="course-item-right">
        <view class="course-item-right-top">
          <view class="course-item-right-one">秋冬围巾搭配</view>
          <view class="course-item-right-two">秋冬围巾搭配指南，时髦又温暖</view>
          <view class="course-item-right-three">方圆老师 资深时尚老师</view>
        </view>
        <view class="course-item-right-four">共11万人学习</view>
      </view>
    </view>
  </view>
  <!-- 按钮 -->
  <view class="button-line">
    <view class="button-one">
      <image src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1611651682iGvsXo.jpg"></image>
    </view>
    <view class="button-two">
      <image src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1611651698OVICha.jpg"></image>
    </view>
  </view>
</view>