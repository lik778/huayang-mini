@import "../../assets/css/common.wxss";
.offline-course-detail {
    padding-bottom: 126rpx;
}
/* banner */
.swiper-box {
    position: relative;
}

.swiper-item-box {
    width: 100%;
    height: 500rpx;
}

.swiper-item-box image {
    width: 100%;
    height: 100%;
}

.swiper-dot {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 50%;
    bottom: -20rpx;
    transform: translateX(-50%);
}

.swiper-dot-item {
    width: 22rpx;
    height: 8rpx;
    border-radius: 4rpx;
    background: rgba(216, 216, 216, 1);
    margin-right: 8rpx;
}

.swiper-dot-item.active {
    background: #3A3C48;
}

/* 线下课信息 */
.introduce {
    margin: 68rpx 30rpx 52rpx;
}

.name {
    font: 500 44rpx/44rpx PingFangSC;
}

.title {
    margin: 20rpx 0 32rpx;
    font: 32rpx/40rpx PingFangSC;
}

.info {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.info-wrap {
    display: flex;
    align-items: center;
}

.price-wrap {
    margin-right: 20rpx;
    font: 32rpx/48rpx PingFangSC;
    color: #CC0000;
}

.price-wrap > .price {
    font-size: 48rpx;
}

.discount-price-wrap {
    font: 32rpx/32rpx PingFangSC;
    color: #996633;
}

.discount-price {
    vertical-align: middle;
}

.discount-price-wrap > .tag {
    width: 94rpx;
    height: 36rpx;
    margin-left: 4rpx;
    vertical-align: middle;
}

.no {
    font: 32rpx/32rpx PingFangSC;
    color: rgba(0,0,0, .6)
}

/* separator */
.separator {
    height: 12rpx;
    background: #F9F9F9;
}

/* 课程介绍 */
.layer {
    position: relative;
    padding: 40rpx 30rpx;
    font: 500 40rpx/40rpx PingFangSC;
}

.layer::before {
    content: '';
    position: absolute;
    left: 0;
    top: 46rpx;
    width: 8rpx;
    height: 28rpx;
    background: #CC0000;
}

.pictures {
    font-size: 0;
}

.picture-item {
    width: 100vw;
}

/* 固定按钮 */
.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
    box-sizing: border-box;
    height: 126rpx;
    background: white;
}
/* 固底按钮-未授权 */
.no-auth {
    width: 100%;
    height: 96rpx;
    margin: 0 10rpx;
    border-radius: 999rpx;
    font: 500 40rpx/96rpx PingFangSC;
    text-align: center;
    background: #CC0000;
    color: white;
}

.no-auth:active {
    opacity: 0.8;
}

/* 固底按钮-非学生卡用户购买 */
.non-member {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

.non-member-price-wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 204rpx;
    height: 96rpx;
    border: 2rpx solid #CC0000;
    border-radius: 999rpx;
    font: 500 30rpx/30rpx PingFangSC;
    color: #CC0000;
}

.non-member-price-wrap:active {
    opacity: 0.8;
}

.non-member-price {
    margin-bottom: 10rpx;
    font-size: 24rpx;
}

.non-member-discount-price-wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 486rpx;
    height: 96rpx;
    font: 500 30rpx/30rpx PingFangSC;
    border-radius: 999rpx;
    background: #CC0000;
    color: white;
}

.non-member-discount-price-wrap:active {
    opacity: 0.8;
}

.member-price {
    margin-bottom: 10rpx;
    font-size: 24rpx;
    color: rgba(255,255,255, .8);
}

/* 学生卡用户购买 */
.member {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    margin: 0 10rpx;
}

.contact {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 0;
    color: #777777;
}

.contact:active {
    opacity: 0.8;
}

.contact-icon {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 12rpx;
}


.contact-text {
    font: 22rpx/22rpx PingFangSC;
}

.member-price-wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 572rpx;
    height: 96rpx;
    border-radius: 999rpx;
    background: #CC0000;
    font: 500 32rpx/32rpx PingFangSC;
    color: white;
}

.member-price {
    font-size: 24rpx;
    color: rgba(255,255,255, .8);
}
