<!--subCourse/videoCourse/videoCourse.wxml-->
<view class="video-course" wx:if="courseData!==''">
  <!-- 视频区域 -->
  <view class="video">
    <video src="{{courseData.video_detail[0].url}}" id="myVideo" bindplay="hideCover" src="{{videoSrc}}"
      poster="{{posterSrc}}" style="{{videoHeight}}" controls="{{showLock?false:true}}" show-center-play-btn="{{false}}"
      bindpause="pauseVideo" bindended="initVideo"></video>
    <view class="video-cover">
      <image src="/assets/images/common/play.png"></image>
    </view>
  </view>
  <!-- 内容简介区域 -->
  <view class="info">
    <view class="info-title">
      <view class="info-title-left">{{courseData.name}}</view>
      <view class="info-title-right">共24人练习</view>
    </view>
    <view class="info-main">
      {{courseData.desc}}
    </view>
  </view>
  <!-- 课程列表 -->
  <view class="course">
    <view class="course-title">
      <view class="course-title-left">课程内容</view>
      <view class="course-title-right">{{videoListAll.length}}个课时</view>
    </view>
    <view class="course-list">
      <view class="{{playIndex===index?'course-item course-item-active':'course-item'}}"
        wx:for="{{courseData.video_detail}}" wx:key="index" bindtap="playCourse" data-item="{{item}}"
        data-index="{{index}}">
        <view class="course-item-left">
          <view class="course-item-left-left" wx:if="{{item.canReplay}}">试看</view>
          <view class="course-item-left-left" wx:if="{{!item.canReplay&&hasLogin}}">
            <image src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1598925311ujROjY.jpg"></image>
          </view>
          <view class="course-item-left-left" wx:if="{{!item.canReplay&&!hasLogin}}">
            <image src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1598925341BLYyqc.jpg"></image>
          </view>
          <view class="course-item-left-right">
            <view class="item-left-top">第一课</view>
            <view class="item-left-bottom">{{item.title}}</view>
          </view>
        </view>
        <view class="course-item-right" wx:if="{{playIndex===index}}">
          正在播放
        </view>
        <view class="course-item-right" wx:else>
          {{item.time}}
        </view>
      </view>
    </view>
    <view class="show-more" wx:if="{{showMore}}" bindtap="showMore">
      <text>展开</text>
      <image src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1598926869coRQGr.jpg"></image>
    </view>
  </view>
  <!-- 隔层 -->
  <view class="bg-cover"></view>
  <!-- 课程详情 -->
  <view class="course-detail">
    <view class="course-detail-title">课程详情</view>
    <image src="{{item}}" wx:for="{{courseData.detail_pics}}" wx:key="index"></image>
  </view>
  <!-- 按钮 -->
  <view class="button-line">
    <view class="button-one" bindtap="joinVideoCourse" wx:if="{{buttonType===1}}">加入课程</view>
    <view class="button-one" bindtap="joinVideoCourse" wx:if="{{buttonType===2}}">Lv 1 等级开启</view>
    <view class="button-three" bindtap="joinVideoCourse" wx:if="{{buttonType===3}}">
      <view>原价¥299.00</view>
      <view>立即加入 ¥99.00</view>
    </view>
    <view class="button-one" bindtap="joinVideoCourse" wx:if="{{buttonType===4}}">立即加入 ¥99.00</view>
  </view>
  <!-- 授权弹窗 -->
  <authModule show="{{didShowAuth}}" bind:authCancelEvent="authCancelEvent" bind:authCompleteEvent="authCompleteEvent">
  </authModule>
</view>