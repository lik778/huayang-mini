/* subCourse/videoCourse/videoCourse.wxss */
.video-course {
  padding-bottom: 140rpx;
}

.button-line {
  width: calc(100vw - 60rpx);
  position: fixed;
  left: 30rpx;
  height: 96rpx;
  bottom: 12rpx;
  background: #CC0000;
  border-radius: 999rpx;
}

.button-one {
  text-align: center;
  line-height: 96rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
}

.button-three {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  justify-content: center;
  color: #FFFFFF;
}

.button-three view:first-child {
  font-size: 28rpx;
  line-height: 28rpx;
  padding-top: 12rpx;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: line-through;
}

.button-three view:last-child {
  font-size: 40rpx;
  line-height: 36rpx;
  padding-top: 8rpx;
}

.button-fission {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100vw;
  position: fixed;
  bottom: 0;
  height: 120rpx;
  padding: 12rpx 30rpx;
  box-sizing: border-box;
  color: white;
  background: white;
}

.direct-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 96rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(0,0,0, 0.7);
  box-sizing: border-box;
  color: rgba(0,0,0,0.7);
}

.direct-btn:active {
  opacity: 0.8;
}

.direct-btn > text {
  display: block;
  margin-bottom: 4rpx;
  font: 500 40rpx/40rpx pingFangSC;
}

.direct-btn .direct-price {
  font: 32rpx/32rpx PingFangSC;
}

.fission-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 440rpx;
  height: 96rpx;
  border-radius: 999rpx;
  font: 500 36rpx/40rpx PingFangSC;
  background: #CC0000;
}

.fission-btn:active {
  opacity: 0.8;
}

.fission-price {
  margin-top: 4rpx;
  font: 32rpx/32rpx PingFangSC;
}

/* 视频区域 */
.video {
  margin: 0 30rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  height: 400rpx;
}

.video video {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
  border-radius: 8rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
}

.video-cover {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
  z-index: 20;
}

.video image {
  width: 130rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  height: 130rpx;
}

.video-cover-one {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
  z-index: 20;
}

.video-cover-one image {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

/* 添加班主任微信 */
.invite-to {
  margin: 0 30rpx;
  padding-top: 32rpx;
}

.invite-to image {
  width: 100%;
  height: 116rpx;
  vertical-align: bottom;
}

/* 内容简介区域 */
.info {
  padding: 0 30rpx;
  padding-top: 60rpx;
  padding-bottom: 28rpx;
}

.info-title {
  /* display: flex;
  justify-content: space-between;
  align-items: center; */
  padding-bottom: 30rpx;
}

.info-title-left {
  font-size: 56rpx;
  font-family: Helvetica;
  color: #000000;
  line-height: 80rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
