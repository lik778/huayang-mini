/* 课程内容 */
.course {
  padding: 72rpx 30rpx 50rpx 30rpx;
}

.course-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.course-title-left {
  font-size: 52rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 52rpx;
}

.course-title-login-left {
  width: 50%;
  padding-left: 110rpx;
  box-sizing: border-box;
  font-size: 48rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 48rpx;
}

.tab-active,
.tab-active-one {
  font-weight: 600;
  font-family: PingFangSC-Medium, PingFang SC;
  position: relative;
}

.tab-active::after {
  content: '';
  position: absolute;
  left: 116rpx;
  bottom: -14rpx;
  width: 84rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #CC0000;
}

.tab-active-one::after {
  content: '';
  position: absolute;
  left: 146rpx;
  bottom: -14rpx;
  width: 84rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #CC0000;
}

.course-title-login-right {
  width: 50%;
  padding-left: 140rpx;
  box-sizing: border-box;
  font-size: 48rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 48rpx;
}

.course-title-right {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 44rpx;
}

.course-list {
  padding-top: 20rpx;
}

.course-item {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F9F9F9;
  border-radius: 8rpx;
  color: #000000;
  padding: 16rpx 0;
  box-sizing: border-box;
  border: 1px solid #F9F9F9;
}

.course-item-active {
  border: 1px solid #CC0000;
  color: #CC0000;
  box-sizing: border-box;
}

.course-item-active .course-item-right {
  color: #CC0000;
}

.course-item-left {
  display: flex;
  align-items: center;
  width: calc(100% - 148rpx);
}

.course-item-right {
  width: 150rpx;
  padding-right: 20rpx;
  text-align: right;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.6);
  line-height: 32rpx;
}

.course-item-left-left {
  width: 64rpx;
  padding: 0 12rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 44rpx;
  color: rgba(0, 0, 0, 0.7);
}

.course-item-left-left image {
  width: 48rpx;
  height: 48rpx;
  vertical-align: bottom;
}

.course-item-left-right {
  width: 450rpx;
}

.item-left-bottom {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-left-top {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  line-height: 44rpx;
}

.show-more {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #748BBE;
  line-height: 32rpx;
  padding-top: 30rpx;
}

.show-more image {
  width: 20rpx;
  height: 12rpx;
  vertical-align: bottom;
  margin-left: 8rpx;
}

/* 隔层 */
.bg-cover {
  width: 100%;
  height: 20rpx;
  background: #F9F9F9;
}

/* 课程详情 */
.course-detail {
  padding: 0 30rpx;
  padding-top: 50rpx;
}

.course-detail-title {
  font-size: 52rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 52rpx;
  padding-bottom: 30rpx;
}

.course-detail image {
  width: 100%;
  vertical-align: bottom;
}

/* 等级不够弹窗 */
.level-alert {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 20;
}

.box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 110rpx 70rpx 50rpx;
  background: white;
}

.box image {
  position: absolute;
  left: 50%;
  top: -50rpx;
  transform: translateX(-50%);
  width: 110rpx;
  height: 134rpx;
}

.text-01 {
  font: 44rpx/60rpx PingFang SC;
}

.alert-btn {
  font: 500 40rpx/48rpx PingFang SC;
  color: white;
  background: #CC0000;
  padding: 24rpx 120rpx;
  border-radius: 999rpx;
  margin-top: 38rpx;
}

.alert-btn:active {
  opacity: 0.8;
}

/* 分享按钮 */
.share {
  position: fixed;
  right: 26rpx;
  bottom: 188rpx;
  width: 180rpx;
  height: 80rpx;
}

.share image {
  width: 180rpx;
  height: 80rpx;
  vertical-align: bottom;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 5;
}

.share-box {
  position: relative;
  width: 180rpx;
  height: 80rpx;
}

.share-box button {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  opacity: 0;
  width: 180rpx;
  height: 80rpx;
}
