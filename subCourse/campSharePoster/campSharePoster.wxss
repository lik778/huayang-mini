}

.html-box {
  width: calc(100vw - 152rpx);
  position: relative;
  background: #fff;
}

.html-box-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 694rpx;

}

.html-box-bg image {
  width: 100%;
  height: 694rpx;
  vertical-align: bottom;
}

.html-date {
  position: absolute;
  left: 30rpx;
  top: 40rpx;
  font-size: 64rpx;
