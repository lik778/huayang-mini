@import "../../assets/css/common.wxss";

.detail {
  padding-bottom: 160rpx;
}

.detail image {
  width: 100%;
  vertical-align: bottom;
}

/* 按钮不同样式 */
.button {
  width: 100vw;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.button.adapter {
  padding-bottom: 36rpx;
}

.button>view {
  width: calc(100% - 60rpx);
  height: 96rpx;
  border-radius: 999rpx;
  text-align: center;
  font-size: 20px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
}

.button .button-style-one {
  line-height: 96rpx;
  background: #CDCDCD;
}

.button-style-four view:first-child {
  font-size: 14px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.8);
  line-height: 14px;
  padding-top: 12rpx;
}

.button-style-four view:last-child {
  font-size: 20px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 18px;
  padding-top: 8rpx;
}

.button-style-four view:last-child text {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.8);
  line-height: 14px;
  text-decoration: line-through;
  padding-left: 12rpx;
}

.button-style-two {
  line-height: 96rpx;
}

.button-style-three {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.button-style-three view {
  line-height: 18px;
}

.button-style-three text {
  line-height: 18px;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.8);
  line-height: 14px;
}

.button-style-three view:first-child {
  font-size: 14px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.8);
  line-height: 14px;
  padding-bottom: 8rpx;
  padding-top: 12rpx;
  text-decoration: line-through;
}

.button-five view:first-child {
  text-decoration: none;
}

.pay {
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 96rpx;
  border-radius: 48rpx;
  text-align: center;
}

/* 分销按钮 */
.share-friend {
  position: fixed;
  right: 26rpx;
  bottom: 188rpx;
}

.share-friend-box {
  position: relative;
}

.share-friend-box button {
  padding: 18rpx 56rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  border-radius: 999rpx;
  color: #FFFFFF;
  opacity: 0;
  position: absolute;
  left: 0;
  top: 0;
}

.share-text {
  padding: 18rpx 56rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  border-radius: 999rpx;
  color: #FFFFFF;
}
