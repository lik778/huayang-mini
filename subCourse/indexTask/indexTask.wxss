.index-task {
    min-height: 100vh;
    padding-bottom: 136rpx;
    background: #F9F9F9;
}

.empty-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.empty-picture {
    width: 320rpx;
    height: 230rpx;
    margin-top: 100rpx;
    font-size: 0;
}

.empty-text {
    text-align: center;
    font: 36rpx/60rpx PingFangSC;
    color: rgba(0,0,0, 0.6);
}

.empty-btn {
    margin-top: 122rpx;
    width: 330rpx;
    height: 88rpx;
    border-radius: 999rpx;
    font: 32rpx/88rpx PingFangSC;
    color: white;
    text-align: center;
    background: #FF5544;
}
.empty-btn:active {
    opacity: 0.9;
}

.launch-layout {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100vw;
    height: 136rpx;
    font-size: 0;
    background: white;
}

.launch-btn {
    height: inherit;
    width: inherit;
}

.launch-btn:active {
    opacity: 0.9;
}
