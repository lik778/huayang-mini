.theme-task {
    padding-bottom: 136rpx;
}

.close-icon {
    position: absolute;
    top: 48rpx;
    left: 14rpx;
    width: 62rpx;
    height: 62rpx;
    z-index: 10;
}

.close-icon:active {
    opacity: 0.9;
}

.header-content {
    position: relative;
    height: 400rpx;
    font-size: 0;
}

.theme-banner {
    width: 100%;
    height: 400rpx;
}

.theme-title {
    position: absolute;
    left: 30rpx;
    bottom: 116rpx;
    font: 600 52rpx/74rpx PingFangSC;
    color: white;
}

.task-layout {
    margin: 68rpx 40rpx 0;
    font: 500 40rpx/40rpx PingFangSC;
}

.bootcamp-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    font-size: 0;
}

.not-join-btn {
    width: 100vw;
    height: 136rpx;
}
.not-join-btn:active {
    opacity: 0.9;
}

.joined-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100vw;
    box-sizing: border-box;
    padding: 24rpx 30rpx;
    background: white;
}

.joined-btn {
    width: 330rpx;
    height: 88rpx;
}

.joined-btn:active {
    opacity: 0.9;
}
