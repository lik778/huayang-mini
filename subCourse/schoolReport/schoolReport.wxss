@import "../../assets/css/common.wxss";

.container {
    padding-bottom: 60rpx;
}

/* 返回 */
.back {
    position: fixed;
    left: 14rpx;
    top: 10rpx;
    width: calc(100% - 14rpx);
    z-index: 50;
}

.back-module {
    position: relative;
    width: 100vw;
    left: -14rpx;
}

.back image {
    width: 64rpx;
    height: 64rpx;
    margin-left: 14rpx;
}

.back-module text {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-size: 34rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #000;
    line-height: 38rpx;
}

.main {
}

.title {
    padding: 0 64rpx;
    font-size: 42rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #000000;
    text-align: center;
    line-height: 36rpx;
}

.date {
    font-size: 42rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #000000;
