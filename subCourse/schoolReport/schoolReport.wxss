/* 21年Q2周年庆 */
.form {
    margin: 0 60rpx 60rpx;
}

.form-item {
    margin-bottom: 40rpx;
}

.label {
    font: 500 36rpx/36rpx PingFangSC;
    margin-bottom: 20rpx;
}

.common-input {
    overflow: hidden;
    height: 88rpx;
    padding: 10rpx 10rpx 10rpx 20rpx;
    box-sizing: border-box;
    border: 1rpx solid #979797;
    border-radius: 8rpx;
    background: #F9F9F9;
}

.select-content-text {
    width: 510rpx;
    height: 88rpx;
    line-height: 68rpx;
    padding: 10rpx 10rpx 10rpx 20rpx;
    box-sizing: border-box;
}

.select-content {
    position: relative;
    overflow: hidden;
    height: 88rpx;
    box-sizing: border-box;
    border: 1rpx solid #979797;
    border-radius: 8rpx;
    background: #F9F9F9;
}

.select-content:active {
    opacity: 0.9;
}

.select-arrow {
    position: absolute;
    right: 1rpx;
    top: 1rpx;
    width: 86rpx;
    height: 88rpx;
    text-align: center;
    border-left: 1rpx solid #979797;
    font-size: 0;
    background: white;
}

.select-arrow > image {
    width: 22rpx;
    height: 12rpx;
    margin-top: 36rpx;
}

/* 地址选择器 */
.area-pop {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.area-pop-mask {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0, 0.6);
    opacity: 0;
    transition: opacity 0.2s cubic-bezier(.5,.21,.43,.95);
}

.area-pop-mask.animation {
    opacity: 1;
}

.area-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    transform: translateY(100%);
    transition: transform 0.2s cubic-bezier(.5,.21,.43,.95);
}

.area-content.animation {
    transform: translateY(0);
}

.v-area {
    width: 100vw;
    z-index: 20;
}
