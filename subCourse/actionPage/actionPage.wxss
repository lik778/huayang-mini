/* subCourse/actionPage/actionPage.wxss */
.content {
    position: relative;
}

.content .cycle-time {
    position: absolute;
    top: 68rpx;
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    color: white;
    z-index: 1;
}
.content .main-cycle-time {
    font-size: 84rpx;
    font-family: "DIN Condensed Bold";
    line-height: 84rpx;
}
.content .sub-cycle-time {
    font-size: 48rpx;
    font-family: "苹方-简 中黑体";
    line-height: 48rpx;
    margin-left: 10rpx;
}
.content .operate {
    position: absolute;
    bottom: 92rpx;
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
    background: white;
    z-index: 1;
}
.operate .arrow-left, .operate .arrow-right {
    width: 28rpx;
    height: 44rpx;
    margin: 40rpx;
}
.operate .pause {
    width: 130rpx;
    height: 130rpx;
    margin: 0 56rpx;
}
.progress {
    position: absolute;
    bottom: 0;
    right: 0;
    left: 0;
}
.progress .duration {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    color: white;
}
.progress .bar {
    height: 14rpx;
    margin-top: 12rpx;
    background: white;
}
#actionVideo {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: -1;
}
