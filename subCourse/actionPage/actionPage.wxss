@import "../../assets/css/common.wxss";
.content {
    position: relative;
}

.content .cycle-time {
    position: absolute;
    top: 46rpx;
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    z-index: 1;
}
.content .main-cycle-time {
    font: 700 84rpx/100rpx Condensed;
}
.content .sub-cycle-time {
    font: 700 48rpx/100rpx "苹方-简 中黑体";
    margin-left: 10rpx;
}
.content .operate {
    position: absolute;
    bottom: 92rpx;
    width: 100vw;
    box-sizing: border-box;
    padding: 0 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 1;
}
.arrow-left, .arrow-right {
    width: 28rpx;
    height: 44rpx;
    margin: 40rpx;
}
.arrow-left:active, .arrow-right:active {
    opacity: 0.8;
}
.pause, .stop {
    width: 130rpx;
    height: 130rpx;
}
.pause:active, .stop:active {
    opacity: 0.8;
}
.progress {
    position: absolute;
    bottom: 0;
    right: 0;
    left: 0;
    font: 32rpx/44rpx "苹方-简 常规体";
    z-index: 10;
}
.progress .duration {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
}
.progress .bar {
    height: 14rpx;
    margin-top: 12rpx;
    background: #FF4433;
}
#actionVideo {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: -1;
}
.prepare-layer, .rest-layer {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    text-align: center;
    background: white;
    z-index: 5;
}
/*prepare-layer*/
.prepare-layer.hide-prepare-layer, .rest-layer.hide-rest-layer {
    display: none;
}
.action-count-down {
    margin: 198rpx 0 90rpx;
    font: bold 372rpx/446rpx Condensed;
}
.action-name, .action-cycle-time {
    margin-bottom: 30rpx;
    font: 52rpx/74rpx "苹方-简 中黑体";
}
.action-cycle-time {
    color:rgba(102,102,102,1);
}
/*rest-layer*/
.rest-time {
    margin: 198rpx 0 240rpx;
    font: bold 130rpx/156rpx Condensed;
}
.next-action-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx;
}
.next-cover {
    width: 248rpx;
    height: 284rpx;
    padding: 0 15rpx;
}
.next-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.next-action-name {
    width: 200rpx;

}
.next-action-cycle-time {
    width: 200rpx;
    text-align: left;
}
.operate-lay {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 0 70rpx;
    margin-top: 108rpx;
}
