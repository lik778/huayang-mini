@import "../../assets/css/common.wxss";

.canvas {
  position: absolute;
  left: -2000px;
}

.container {
  width: 100vw;
  min-height: 100vh;
}

.bg-image {
  position: absolute;
  width: 100vw;
  height: 100vh;
  left: 0;
  top: 0;
  z-index: 10;
}

.bg-image image {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

.poster {
  position: absolute;
  z-index: 20;
  width: 100vw;
  height: 100vh;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
}

.poster-box {
  width: 100%;
  height: 100%;
  position: relative;
}

.poster-bg {
  width: 100%;
  height: 100%;
}

.poster-bg image {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

.text-one {
  position: absolute;
  right: 86rpx;
