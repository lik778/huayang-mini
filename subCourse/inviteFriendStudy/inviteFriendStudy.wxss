}

.teacher-info {
  position: absolute;
  left: 96rpx;
  top: 440rpx;
  display: flex;
}

.teacher-left {
  width: 80rpx;
  height: 80rpx;
}

.teacher-left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: bottom;
}

.teacher-right {
  padding-left: 20rpx;
}

.teacher-right-top {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
