}

.title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 374rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 36rpx;
