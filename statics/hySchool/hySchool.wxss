.school {
    padding: 40rpx;
    font-size: 0;
}

/* 通用 */
.title {
    padding: 20rpx 0;
    margin-bottom: 20rpx;
    font: 500 48rpx/48rpx PingFangSC;
}

.desc {
    margin-bottom: 50rpx;
    font: 28rpx/40rpx PingFangSC;
    text-align: justify;
}

/* 学校背景 */
.img01 {
    width: 670rpx;
    height: 446rpx;
    margin-bottom: 40rpx;
}

.supplement01 {
    padding-bottom: 30rpx;
}

/* 师资介绍 */
.teachers {
    padding: 20rpx 40rpx 0;
}

.teacher-item {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 64rpx;
}

.teacher-avatar {
    width: 200rpx;
    height: 332rpx;
}

.info {
    margin-bottom: 30rpx;
}

.name {
    font: 40rpx/40rpx PingFangSC;
    background: linear-gradient(218deg, #FF6658 0%, #050204 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.job {
    font: 28rpx/28rpx PingFangSC;
    color: #F24B3C;
}

.resume {
    display: block;
    position: relative;
    margin: 12rpx 0 0 22rpx;
    font: 28rpx/40rpx PingFangSC;
}

.resume::before {
    content: "";
    position: absolute;
    top: 16rpx;
    left: -22rpx;
    width: 8rpx;
    height: 8rpx;
    border-radius: 999rpx;
    background: #BBBBBB;
}

.more-teachers {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 88rpx;
    margin-bottom: 80rpx;
    box-sizing: border-box;
    border: 1rpx solid black;
    border-radius: 999rpx;
    font: 32rpx/86rpx PingFangSC;
    text-align: center;
    color: rgba(0,0,0, 0.8);
}

.more-teachers:active {
    opacity: 0.8;
}

.arrow {
    width: 14rpx;
    height: 20rpx;
    margin-left: 14rpx;
}

/* 学员画像 */
.img02 {
    display: block;
    width: 526rpx;
    height: 336rpx;
    margin: 0 auto 108rpx;
}

/* 校区介绍 */
.school-pictures {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}

.school-img {
    width: 324rpx;
    height: 216rpx;
    margin-bottom: 20rpx;
}

.school-img:nth-child(2n-1) {
    margin-right: 20rpx;
}
