@import "/assets/css/common.wxss";
.friends-activity {
    overflow: hidden;
    padding: 40rpx 40rpx 0;
}
/* 通用 */
.title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    margin-bottom: 30rpx;
    font: 500 48rpx/48rpx PingFangSC;
}

.more {
    font: 32rpx/32rpx PingFangSC;
    color: rgba(0, 0, 0, 0.8);
}

/* 近期活动 */
.activity-item {
    margin-bottom: 60rpx;
}

.activity-item:active {
    opacity: 0.9;
}

.cover {
    width: 670rpx;
    height: 336rpx;
    font-size: 0;
}

.content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 18rpx;
}

.public-title {
    width: 496rpx;
    height: 88rpx;
    font: 500 32rpx/44rpx PingFangSC;
}

.separate {
    width: 2rpx;
    height: 88rpx;
    background: #DDDDDD;
}

.date {
    width: 136rpx;
    height: 88rpx;
    font: 28rpx/44rpx PingFangSC;
    color: rgba(0,0,0, 0.6);
    text-align: right;
}

/* 活动相册 */
.history-item {
    margin-bottom: 80rpx;
}

.photo-card {
    margin-bottom: 60rpx;
}

.photo-content {
    overflow: hidden;
    position: relative;
}

.photo-cover {
    width: 100%;
    height: 336rpx;
    vertical-align: bottom;
}

.photo-layer {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 14rpx 0;
    box-sizing: border-box;
    font: 28rpx/40rpx PingFangSC;
    color: white;
    background: rgba(0,0,0, 0.6);
}

.photo-info {
    width: 210rpx;
    text-align: center;
}

.separate {
    width: 2rpx;
    height: 34rpx;
    background: rgba(255,255,255, 0.4);
}

.album-title {
    margin-top: 20rpx;
    font: 500 32rpx/44rpx PingFangSC;
}

/* 校友说 */
.comments {}

.comment-item {
    display: flex;
    margin-bottom: 60rpx;
}

.comment-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 999rpx;
}

.comment-info {
    width: 570rpx;
    margin-left: 20rpx;
}

.comment-username  {
    display: block;
    margin-bottom: 20rpx;
    font: 500 32rpx/32rpx PingFangSC;
}

.comment-content {
    font: 28rpx/40rpx PingFangSC;
    text-align: justify;
}
