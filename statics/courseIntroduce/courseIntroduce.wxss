@import "/assets/css/common.wxss";

.course-introduce {
    padding: 40rpx;
}

/* 通用 */
.title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    margin-bottom: 30rpx;
    font: 500 48rpx/48rpx PingFangSC;
}

.more {
    font: 32rpx/32rpx PingFangSC;
    color: rgba(0, 0, 0, 0.8);
}

/* 直播 */
.layout {
    margin-bottom: 60rpx;
}

.layout-item {
    position: relative;
    margin-top: 40rpx;
    display: flex;
    align-items: center;
    font-size: 0;
}

.play-icon{
    position: absolute;
    top: 78rpx;
    left: 78rpx;
    width: 84rpx;
    height: 84rpx;
    font-size: 0;
}

.layout-cover {
    width: 240rpx;
    height: 240rpx;
}

.layout-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 240rpx;
    margin-left: 40rpx;
}

.live-title {
    width: 390rpx;
    font: 500 32rpx/44rpx PingFangSC;
}

.live-date {
    margin: 28rpx 0 0;
    font: 28rpx/28rpx PingFangSC;
    color: rgba(0,0,0, 0.6);
}

.live-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 208rpx;
    height: 64rpx;
    border: 2rpx solid #FF5544;
    box-sizing: border-box;
    text-align: center;
    font: 32rpx/60rpx PingFangSC;
    background: #FF5544;
    color: white;
}

.live-btn:active {
    opacity: 0.8;
}

.live-btn.review {
    background: white;
    color: #FF5544;
}

/* 公开课 */
.supplement01 {
    margin-top: 80rpx;
}

.activity-item {
    margin-bottom: 60rpx;
}

.activity-item:active {
    opacity: 0.9;
}

.cover {
    width: 670rpx;
    height: 336rpx;
    font-size: 0;
}

.content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 18rpx;
}

.public-title {
    width: 496rpx;
    height: 88rpx;
    font: 500 32rpx/44rpx PingFangSC;
}

.separate {
    width: 2rpx;
    height: 88rpx;
    background: #DDDDDD;
}

.date {
    width: 136rpx;
    height: 88rpx;
    font: 28rpx/44rpx PingFangSC;
    color: rgba(0,0,0, 0.6);
    text-align: right;
}

/* 线下课 */
.supplement02 {
    margin-top: 80rpx;
}

.ads-item {
    overflow: hidden;
    padding-bottom: 60rpx;
    height: 240rpx;
}

.item-cover {
    float: left;
    width: 240rpx;
    height: 240rpx;
    font-size: 0;
}

.item-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 264rpx;
    height: inherit;
}

.info-title {
    margin-top: 4rpx;
    font: 500 32rpx/44rpx PingFangSC;
}

.info-desc {
    display: block;
    margin-top: 16rpx;
    font: 28rpx/40rpx PingFangSC;
    color: rgba(0,0,0, 0.6);
}

.info-operate {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.info-price {
    font: 48rpx/48rpx PingFangSC;
    color: #FF5544;
}

.info-price::before {
    content: "¥";
    display: inline-block;
    margin: 0 6rpx 4rpx 0;
    font: 32rpx/32rpx PingFangSC;
    color: #FF5544;
}

.info-btn {
    width: 192rpx;
    height: 64rpx;
    text-align: center;
    font: 32rpx/64rpx PingFangSC;
    color: white;
    background: #FF5544;
}

/* 游学 */
.supplement03 {
    margin-top: 20rpx;
}

.travel-item:active {
    opacity: 0.9;
}

.travel-cover {
    position: relative;
    overflow: hidden;
    width: 670rpx;
    height: 336rpx;
}

.travel-cover-picture {
    width: 100%;
    height: 100%;
}

.day-count {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 128rpx;
    height: 52rpx;
    border-radius: 0 6rpx 0 0;
    font: bold 28rpx/52rpx PingFangSC;
    text-align: center;
    color: white;
    background: #FF4444;
}

.travel-title {
    margin: 20rpx 0;
    font: 500 32rpx/44rpx PingFangSC;
}

.travel-info {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 48rpx;
}

.travel-price {
    display: flex;
    align-items: flex-end;
    font-size: 32rpx;
    font-weight: 500;
    color: #FF4444;
}

.price-01 {
    margin: 0 12rpx 0 6rpx;
    font: 48rpx/48rpx PingFangSC;
}

.price-02 {
    text-decoration: line-through;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.5);
}

.travel-visit-no {
    font: 28rpx/28rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
}

/* 线上课 */
.supplement04 {
    margin-top: 80rpx;
}
.course-item {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    margin-bottom: 30rpx;
}

.course-item:active {
    opacity: 0.9;
}

.course-image {
    width: 166rpx;
    height: 220rpx;
    font-size: 0;
    border-radius: 8rpx;
    margin-right: 24rpx;
}

.course-info {
    width: calc(100% - 190rpx);
    height: 220rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.course-info-main-title {
    height: 36rpx;
    font: 500 36rpx/36rpx PingFangSC;
    color: #000000;
}

.course-info-sub-title {
    height: 32rpx;
    font: 32rpx/32rpx PingFangSC;
    color: #000000;
    margin: 28rpx 0 20rpx;
}

.course-info-teacher {
    height: 32rpx;
    font: 32rpx/32rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
}

.course-info-bottom-right-module-one {
    font: 500 32rpx/32rpx PingFangSC;
    color: #FF5544;
}

.course-info-bottom-left-module-two {
    font: 28rpx/28rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
    line-height: 28rpx;
    padding-left: 10rpx;
}

.course-info-bottom-right-module-one-two {
    font: 500 32rpx/32rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
    text-decoration-line: line-through;
    padding-left: 10rpx;
}

.course-info-bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.course-info-bottom-right {
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.6);
    line-height: 28rpx;
}

.course-info-bottom-left-module-one {
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    line-height: 32rpx;
}

.course-logo {
    position: relative;
}

.course-logo-icon {
    position: absolute;
    right: 24rpx;
    top: 0;
    width: 52rpx;
    height: 30rpx;
    border-top-right-radius: 8rpx;
}

.course-logo-icon-one {
    width: 32rpx;
}
