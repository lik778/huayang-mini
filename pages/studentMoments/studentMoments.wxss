/* pages/studentMoments/studentMoments.wxss */
.container {
  padding-bottom: 200rpx;
  background: #D8D8D8;
  min-height: 100vh;
}

/* 顶部固定区域 */
.fixed-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 248rpx;
  z-index: 20;
  background: #D8D8D8;
}

/* 点赞+N人在看 */

.top-module {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 30rpx;
  width: calc(100% - 60rpx);
}

.top-module-left {
  display: flex;
  align-items: center;
}

.top-module-left image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  vertical-align: bottom;
}

.top-module-left text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 28rpx;
  padding-left: 8rpx;
}

.top-module-right {
  display: flex;
  align-items: center;
}

.top-module-right-image image {
  width: 48rpx;
  height: 48rpx;
  margin-left: -24rpx;
  border-radius: 50%;
  vertical-align: bottom;
}

.top-module-right-desc {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 28rpx;
  padding-left: 8rpx;
}

/* 弹幕 */
.barrage-module {
  height: 168rpx;
  width: 100%;
}

.barrage-scroll-module {
  background: #fff;
}

.barrage-publish-module {
  position: fixed;
  right: 0;
  top: 116rpx;
  z-index: 15;
}

.barrage-publish-module image {
  width: 100rpx;
  height: 100rpx;
  vertical-align: bottom;
  margin-right: -6rpx;
}

/* 动态列表 */
.main-module {
  padding: 0 30rpx;
  margin-top: 60rpx;
  padding-top: 248rpx;
}

.item {
  padding-bottom: 52rpx;
}

.item-title {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}

.item-title image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: bottom;
  border-radius: 50%;
}

.item-title text {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 32rpx;
  padding-left: 16rpx;
}

.item-main {}

.item-main image {
  width: 100%;
  height: 300rpx;
  vertical-align: bottom;
  border-radius: 16rpx 16rpx 6rpx 6rpx;
}

.item-main-title {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 32rpx;
  padding-top: 20rpx;
  padding-bottom: 24rpx;
}

.item-bottom {
  display: flex;
}

.item-like-module {
  display: flex;
  align-items: center;
  padding-right: 64rpx;
}

.item-like-module image {
  width: 48rpx;
  height: 48rpx;
  vertical-align: bottom;
}

.item-like-module text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 24rpx;
  padding-left: 10rpx;
}

.item-comment-module {
  display: flex;
  align-items: center;
  padding-right: 66rpx;
}

.item-comment-module image {
  width: 48rpx;
  height: 48rpx;
  vertical-align: bottom;

}

.item-comment-module text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 24rpx;
  padding-left: 10rpx;
}

/* 投稿 */
.contribute-button {
  position: fixed;
  right: 30rpx;
  bottom: 146rpx;
  z-index: 20;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 44rpx;
  background: #CC0000;
  border-radius: 999rpx;
  width: 180rpx;
  height: 76rpx;
}

.contribute-button image {
  width: 24rpx;
  height: 24rpx;
  vertical-align: bottom;
  margin-right: 12rpx;
}

/* 发布弹幕 */
.publish-barrage-module {
  height: 500rpx;
}

.publish-barrage-module-cover {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 30;
  background: rgba(0, 0, 0, 0.67);
}

.publish-barrage-module-main {
  position: fixed;
  left: 0;
  bottom: 120rpx;
  z-index: 35;
  border-radius: 20rpx 20rpx 0px 0px;
  width: 100vw;
  background: #fff;
}

.publish-barrage-title {
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 40rpx;
  text-align: center;
  padding: 54rpx 0 40rpx 0;
}

.publish-barrage-textarea {
  width: calc(100% - 80rpx);
  padding: 20rpx;
  box-sizing: border-box;
  margin: 0 auto;
  height: 160rpx;
  border-radius: 8rpx;
  border: 0.5px solid #ddd;
}

.publish-barrage-button-line {
  display: flex;
  width: calc(100% - 60rpx);
  justify-content: center;
  margin: 0 auto;
  padding-top: 56rpx;
  padding-bottom: 60rpx;
}

.publish-barrage-cancel {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #CC0000;
  width: 330rpx;
  height: 88rpx;
  border: 1px solid #CC0000;
  text-align: center;
  line-height: 88rpx;
  border-radius: 999rpx;
}

.publish-barrage-sure {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #fff;
  width: 330rpx;
  height: 88rpx;
  border: 1px solid #CC0000;
  text-align: center;
  line-height: 88rpx;
  border-radius: 999rpx;
  background: #CC0000;
  margin-left: 30rpx;
}