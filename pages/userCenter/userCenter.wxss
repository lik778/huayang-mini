.user-center {
  background: #F9F9F9;
  padding-bottom: 100rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 个人信息  */
.banner {
  width: 100%;
  height: 502rpx;
  position: relative;
}

.banner>image {
  width: 100%;
  height: 502rpx;
}

.message {
  position: absolute;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  top: 190rpx;
}

.message image {
  width: 132rpx;
  height: 132rpx;
  vertical-align: bottom;
  border-radius: 50%;
  margin-right: 30rpx;
}

.message .user-info {
  display: flex;
  flex-direction: column;
}

.message text {
  font: 600 52rpx/74rpx PingFangSC;
  color: rgba(255, 255, 255, 1);
}

.message .lifetime {
  margin-top: 10rpx;
  font: 36rpx/44rpx Helvetica;
}

/* 我的 */
.person {
  width: calc(100% - 60rpx);
  margin: 0 auto;
  padding: 30rpx;
  background: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;
  box-shadow: 0px 0px 12rpx 0px rgba(0, 0, 0, 0.05);
  position: relative;
  top: -108rpx;
}
.layout {
  margin-bottom: 50rpx;
  font: 500 44rpx/60rpx PingFangSC;
  color: #333;
}
.person-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.content-element {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 192rpx;
  height: 244rpx;
  padding: 24rpx 0 30rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 12px 0px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  background: white;
}
.content-element:active {
  opacity: 0.8;
}
.ele-icon {
  width: 56rpx;
  height: 56rpx;
  font-size: 0;
}
.ele-title {
  font: 36rpx/44rpx Helvetica;
}
.ele-btn {
  width: 128rpx;
  height: 56rpx;
  border-radius: 999rpx;
  border: 2rpx solid #CC0000;
  font: 500 32rpx/52rpx PingFangSC;
  color: #CC0000;
  text-align: center;
}
.ele-no {
  position: absolute;
  top: -18rpx;
  right: -18rpx;
  width: 44rpx;
  height: 44rpx;
  color: white;
  text-align: center;
  font: 500 32rpx/44rpx PingFangSC;
  border-radius: 999rpx;
  background: #CC0000;
}
.add-btn {
  width: 630rpx;
  height: 96rpx;
  font-size: 0;
  animation: flashing 5s ease infinite;
}
.add-btn:active {
  opacity: 0.8;
}
/* 功能栏 */
.function {
  width: calc(100% - 60rpx);
  margin: 0 auto;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0px 0px 12rpx 0px rgba(0, 0, 0, 0.05);
  position: relative;
  top: -68rpx;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 40rpx;
  margin-right: 38rpx;
  border-bottom: 1px solid #F2F2F2;
  padding: 24rpx 0 20rpx 0;
}

.function-item:last-child {
  border: none;
}

.function-item>image {
  width: 16rpx;
  height: 28rpx;
  vertical-align: bottom;

}

.function-item-left {
  display: flex;
  align-items: center;
}

.function-item-left image {
  width: 40rpx;
  height: 44rpx;
  vertical-align: bottom;
  margin-right: 26rpx;
}

.function-item-top {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 50rpx;
}

.function-item-bottom {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  padding-top: 8rpx;
}

.function-item-left .contact-image {
  width: 46rpx;
  height: 40rpx;
  vertical-align: bottom;
  margin-left: -4rpx;
}

@keyframes flashing {
  0% {
    transform: scale(1);
  }
  4% {
    transform: scale(1.05);
  }
  8% {
    transform: scale(1);
  }
  12% {
    transform: scale(1.05);
  }
  16% {
    transform: scale(1);
  }
}
