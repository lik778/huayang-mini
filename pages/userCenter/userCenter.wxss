/* pages/userCenter/userCenter.wxss */
.user-center {
  background: #F9F9F9;
  padding-bottom: 154rpx;
}

/* 个人信息  */
.banner {
  background: black;
  width: 100%;
  height: 500rpx;
  position: relative;
}

.message {
  position: absolute;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  top: 120rpx;
}

.message image {
  width: 92rpx;
  height: 92rpx;
  vertical-align: bottom;
  border-radius: 50%;
  margin-right: 32rpx;
}

.message text {
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 56rpx;
}

/* 经验条 */
.experience {
  width: calc(100% - 100rpx);
  position: absolute;
  padding: 0 50rpx;
  top: 254rpx;
}

.experience-title {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.experience-title-left {}

.experience-title-left-one {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 236, 213, 1);
  line-height: 28rpx;
  margin-right: 20rpx;
}

.experience-title-left-two {
  font-size: 64rpx;
  font-family: DINCondensed-Bold, DINCondensed;
  font-weight: bold;
  color: rgba(255, 236, 213, 1);
  line-height: 76rpx;
}

.experience-title-right {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 236, 213, 1);
  line-height: 24rpx;
}

.experience-process {
  margin-top: 20rpx;
  width: 100%;
  height: 12rpx;
  border-radius: 6rpx;
  background: #333333;
  opacity: 0.6;
  position: relative;
}

.experience-process-active {
  position: absolute;
  left: 0;
  top: 0;
  height: 12rpx;
  border-radius: 6rpx 200rpx 200rpx 6rpx;
  background: #CC0000;
}

.full-message {
  width: calc(100% - 50rpx);
  height: 144rpx;
  box-shadow: 0px 0px 12rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 8rpx;
  margin: 0 auto;
  position: relative;
  top: -72rpx;
  overflow: hidden;
}

.full-message-cover-one {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(249, 227, 227, 1);
  z-index: 4;
}

.full-message-cover {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(249, 227, 227, 1) linear-gradient(90deg, rgba(0, 0, 0, 0.5) 0%, rgba(255, 255, 255, 0.5) 100%);
  z-index: 5;
  mix-blend-mode: soft-light;
}

.full-message-left {
  position: absolute;
  left: 40rpx;
  top: 24rpx;
  z-index: 10;
}

.full-message-top {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(39, 15, 15, 1);
  line-height: 50rpx;
}

.full-message-bottom {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(39, 15, 15, 1);
  line-height: 40rpx;
  padding-top: 8rpx;
}


.full-message-right {
  position: absolute;
  right: 40rpx;
  top: 26rpx;
  z-index: 10;
}

.full-message-right image {
  width: 112rpx;
  height: 88rpx;
}

/* 每日任务 */
.task {
  width: calc(100% - 60rpx);
  margin: 0 auto;
  background: #fff;
  box-shadow: 0px 0px 12rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  margin-top: -52rpx;
}

.task-title {
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 56rpx;
  padding: 30rpx 40rpx 40rpx 40rpx;
}

.task-list {}

.task-item {
  display: flex;
  padding: 0 40rpx;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20rpx;
}

.task-item-left {
  display: flex;
  align-items: center;
}

.task-item-left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.task-item-middle {
  margin-left: 30rpx;
}

.task-item-middle view:first-child {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
}

.task-item-middle view:nth-child(2) {
  font-size: 32rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
  line-height: 44rpx;
  padding-top: 8rpx;
}

.task-item-middle view:last-child {
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 17px;
}

.task-item-middle view:last-child text:nth-child(2) {
  color: #CC0000;
  padding-top: 8rpx;
}

.task-item-right {
  width: 130rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: rgba(204, 0, 0, 1);
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  position: relative;
}

.task-item-right button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.task-item-right-one {
  width: 130rpx;
  height: 60rpx;
  background: rgba(204, 204, 204, 1);
  border-radius: 30rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
  text-align: center;
}

/* 功能栏 */
.function {
  width: calc(100% - 60rpx);
  margin: 0 auto;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0px 0px 12rpx 0px rgba(0, 0, 0, 0.05);
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 40rpx;
  margin-right: 38rpx;
  border-bottom: 1px solid #F2F2F2;
  padding: 24rpx 0 20rpx 0;
}

.function-item:last-child {
  border: none;
}

.function-item>image {
  width: 16rpx;
  height: 28rpx;
  vertical-align: bottom;

}

.function-item-left {
  display: flex;
  align-items: center;
}

.function-item-left image {
  width: 40rpx;
  height: 44rpx;
  vertical-align: bottom;
  margin-right: 26rpx;
}

.function-item-top {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 50rpx;
}

.function-item-bottom {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  padding-top: 8rpx;
}