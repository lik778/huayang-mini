@import "../../assets/css/common.wxss";

.user-center {
    background: #F9F9F9;
    padding-bottom: 200rpx;
    min-height: 100vh;
    box-sizing: border-box;
}

.user-center.nodata {
    padding-bottom: 300rpx;
}

/* 个人信息  */
.banner {
    overflow: hidden;
    margin-bottom: 40rpx;
    font-size: 0;
}

.banner-bg {
    width: 100%;
    height: 400rpx;
    background: black;
}

.banner-bg.sign {
    height: 556rpx;
}

.message {
    position: absolute;
    padding-left: 50rpx;
    display: flex;
    align-items: center;
    top: 168rpx;
    color: #fff;
    font-size: 44rpx;
    font-weight: bold;
}

.message > image {
    width: 132rpx;
    height: 132rpx;
    border: 4rpx solid white;
    box-sizing: border-box;
    vertical-align: bottom;
    border-radius: 50%;
    margin-right: 30rpx;
}

.message .no-data-layout {
    display: flex;
    flex-direction: column;
    color: white;
}

.no-data-layout > .no-data-title {
    font: 500 52rpx/52rpx PingFangSC;
}

.no-data-layout > .no-data-sub-title {
    margin: 32rpx 0 60rpx;
    font: 32rpx/52rpx PingFangSC;
}

.no-data-layout > .no-data-btn {
    width: 280rpx;
    height: 80rpx;
    font: 600 32rpx/80rpx PingFangSC;
    text-align: center;
    background: #FF5544;
}

.message .user-info {
    display: flex;
    flex-direction: column;
}

.message .user-info .nick-name {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 510rpx;
}

.message .user-info .vip-tag {
    width: 32rpx;
    height: 32rpx;
    border-radius: 0;
    margin: 0 4rpx 0 14rpx;
    vertical-align: middle;
}

.nick-name .name-text {
    font-size: 24rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #DEB78F;
    line-height: 24rpx;
    height: 24rpx;
    background: linear-gradient(90deg, #F2D6B8 0%, #CEA375 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    white-space: nowrap;
    vertical-align: middle;
}

.message .name {
    font-size: 52rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
    line-height: 52rpx;
}

.message .teacher-card {
    display: inline-block;
    font: 32rpx/32rpx PingFangSC;
}

.message .teacher-card::after {
    display: inline-block;
    content: "";
    width: 14rpx;
    height: 20rpx;
    margin: 6rpx 0 0 14rpx;
    font-size: 0;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1640678877oPKQYZ.jpg") no-repeat center;
    background-size: contain;
}

/* 专属邀请码 */
.invite-self-code {
    position: absolute;
    top: 480rpx;
    width: 100vw;
    box-sizing: border-box;
    padding: 0 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.invite-self-code-left {
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 32rpx;
}

.invite-self-code-right {
    width: 480rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #834B25;
    background: #FF5544 linear-gradient(90deg, #FBD8B3 0%, #ECCBA9 100%);
    border-radius: 999rpx;
}

/* 广告位 */
.ad {
    width: 690rpx;
    height: 172rpx;
    margin: 60rpx auto 40rpx;
}

.ad.nodata {
    top: 160rpx;
}

.ad.partner {
    top: -212rpx;
}

.swiper-item-box {
    width: 100%;
    height: 172rpx;
}

.swiper-item-box image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}


/* 功能栏 */
.function {
    width: calc(100% - 60rpx);
    margin: 0 auto;
    background: #fff;
    border-radius: 8rpx;
    box-shadow: 0 0 12rpx 0px rgba(0, 0, 0, 0.05);
}

.function-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-left: 40rpx;
    margin-right: 38rpx;
    border-bottom: 1px solid #F2F2F2;
    padding: 24rpx 0 20rpx 0;
}

.function-item:last-child {
    border: none;
}

.function-item>image {
    width: 16rpx;
    height: 28rpx;
    vertical-align: bottom;

}

.function-item-left {
    display: flex;
    align-items: center;
}

.function-item-left image {
    width: 40rpx;
    height: 44rpx;
    vertical-align: bottom;
    margin-right: 26rpx;
}

.function-item-box {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 106rpx;
}

.function-item-top {
    font-size: 36rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(0, 0, 0, 1);
    line-height: 50rpx;
}

.function-item-bottom {
    min-height: 48rpx;
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    padding-top: 8rpx;
    font: 28rpx/40rpx PingFangSC;
}

.function-item-bottom > text {
    font: 28rpx/28rpx PingFangSC;
    color: #FF5544;
}

.function-item-left .task-image {
    width: 52rpx;
    height: 54rpx;
    vertical-align: bottom;
    margin-left: -4rpx;
    margin-right: 20rpx;
}

@keyframes flashing {
    0% {
        transform: scale(1);
    }

    4% {
        transform: scale(1.05);
    }

    8% {
        transform: scale(1);
    }

    12% {
        transform: scale(1.05);
    }

    16% {
        transform: scale(1);
    }
}

/* 动画 */
@keyframes slideContentUp {
    from {
        opacity: 0;
        /*设置为正数则底部弹出来，负数则相反*/
    }

    to {
        opacity: 1;
    }
}

@keyframes slideContentDown {
    from {
        opacity: 1;
    }

    to {
        opacity: 0;
    }
}
