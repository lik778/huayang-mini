@import "../../assets/css/common.wxss";

/* 用户信息 */
.user-center {
		background: #F9F9F9;
		padding-bottom: 200rpx;
		min-height: 100vh;
		box-sizing: border-box;
    background: linear-gradient(180deg, #FFDADA 0%, #FFF8F8 30%, #FFFFFF 100%);
}

/* 登录信息 */
.wx-auth {
    margin-bottom: 48rpx;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 10px 36rpx 0;
}

.wx-auth-info {
		display: flex;
		align-items: center;
}

.avatar {
    width: 136rpx;
    height: 136rpx;
    margin-right: 30rpx;
		border-radius: 999rpx;
}

.name {
    width: 510rpx;
		font: 52rpx/1 PingFangSC;
}


.home-page {
		white-space: nowrap;
		font: 32rpx/1 PingFangSC;
}

.home-page:active {
    opacity: 0.9;
}

.home-page::after {
		content: "";
		display: inline-block;
    width: 14rpx;
    height: 20rpx;
    margin-left: 14rpx;
    margin-top: 6rpx;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1658289993gvvhWC.jpg") no-repeat center;
    background-size: contain;
}

/* 练习数据 */
.statistics {
    width: 690rpx;
    height: 288rpx;
    margin: 0 auto 20rpx;
    padding: 54rpx 32rpx 48rpx;
		box-sizing: border-box;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1658287865ZpALSY.jpg") no-repeat center;
    background-size: contain;
    color: white;
}

.statistics:active {
    opacity: 0.9;
}

.stat-top {
		display: flex;
		justify-content: space-between;
		align-items: center;
}

.stat-wrap {
		display: flex;
		align-items: center;
}

.stat-icon {
    width: 46rpx;
    height: 40rpx;
    margin-right: 32rpx;
}

.stat-title {
		font: 36rpx/1 PingFangSC;
}


.stat-calendar {
		display: flex;
		align-items: center;
		font: 28rpx/28rpx PingFangSC;
}

.stat-calendar-arrow {
    width: 16rpx;
    height: 24rpx;
    margin-left: 16rpx;
}

.stat-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin: 54rpx 50rpx 0;
}

.stat-item {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
}

.number {
    margin-bottom: 28rpx;
		font: 600 40rpx/1 PingFangSC;
}

.stat-item-title {
		font: 24rpx/1 PingFangSC;
		color: rgba(255, 255, 255, 0.8);
}

/* 功能栏 */
.function {
  width: calc(100% - 60rpx);
  margin: 0 auto;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 0 12rpx 0px rgba(0, 0, 0, 0.05);
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 40rpx;
  margin-right: 38rpx;
  border-bottom: 1px solid #F2F2F2;
  padding: 24rpx 0 20rpx 0;
}

.function-item:last-child {
  border: none;
}

.function-item>image {
  width: 16rpx;
  height: 28rpx;
  vertical-align: bottom;

}

.function-item-left {
  display: flex;
  align-items: center;
}

.function-item-left image {
  width: 40rpx;
  height: 44rpx;
  vertical-align: bottom;
  margin-right: 26rpx;
}

.function-item-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 106rpx;
}

.function-item-top {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 50rpx;
}

.function-item-bottom {
  min-height: 48rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  padding-top: 8rpx;
  font: 28rpx/40rpx PingFangSC;
}

.function-item-bottom>text {
  font: 28rpx/28rpx PingFangSC;
  color: #FF5544;
}

.function-item-left .task-image {
  width: 52rpx;
  height: 54rpx;
  vertical-align: bottom;
  margin-left: -4rpx;
  margin-right: 20rpx;
}

@keyframes flashing {
  0% {
    transform: scale(1);
  }

  4% {
    transform: scale(1.05);
  }

  8% {
    transform: scale(1);
  }

  12% {
    transform: scale(1.05);
  }

  16% {
    transform: scale(1);
  }
}

/* 动画 */
@keyframes slideContentUp {
  from {
    opacity: 0;
    /*设置为正数则底部弹出来，负数则相反*/
  }

  to {
    opacity: 1;
  }
}

@keyframes slideContentDown {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
  }
}
