.order {
    height: 100vh;
    background: #f9f9f9;
}
.order .order-affirm .time-remaining {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100vw;
    height: 80px;
    background: #fff;
    border-bottom: 0.5px solid #ddd;
}
.order .order-affirm .time-remaining p {
    font-size: 16px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    line-height: 22px;
    text-align: center;
}
.order .order-affirm .time-remaining p:first-child {
    color: #000;
    padding-top: 16px;
}
.order .order-affirm .time-remaining .count-down {
    color: #f44;
    padding-top: 4px;
}
.order .order-affirm .time-remaining .overtime {
    padding-top: 0 !important;
    line-height: 80px;
    color: #000 !important;
}
.order .order-affirm .activity-message {
    margin-top: 10px;
    background: #fff;
    border: 0.5px solid #ddd;
    padding-bottom: 16px;
}
.order .order-affirm .activity-message > view {
    padding: 0 4.2667vw;
    display: flex;
}
.order .order-affirm .activity-message .activity-name {
    font-size: 20px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #000;
    line-height: 28px;
    padding-top: 20px;
    padding-bottom: 6px;
}
.order .order-affirm .activity-message .activity-common {
    /* height: 30px; */
    line-height: 30px;
}
.order .order-affirm .activity-message .activity-common > text {
    font-size: 16px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
}
.order .order-affirm .activity-message .activity-common .activity-message-left {
    color: rgba(0,0,0,0.9);
    width: 24vw;
    display: flex;
    justify-content: space-between;
    flex-shrink: 0;
}
.order .order-affirm .activity-message .activity-common .activity-message-right {
    color: rgba(0,0,0,0.6);
    padding-left: 2.1333vw;
}
.order .order-affirm .apply-message {
    margin-top: 10px;
    background: #fff;
    border-top: 0.5px solid #ddd;
}
.order .order-affirm .apply-message .apply-message-common {
    width: 100vw;
    height: 55px;
    font-size: 16px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #000;
    line-height: 55px;
    border-bottom: 0.5px solid #ddd;
}
.order .order-affirm .apply-message .apply-message-common .apply-message-common-left {
    padding-left: 16px;
}
.order .order-affirm .pay-btn {
    width: 100vw;
    height: 56px;
    background: #fff;
    display: flex;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    left: 0;
}
.order .order-affirm .pay-btn .price {
    font-size: 22px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FF4444;
    line-height: 56px;
    padding-left: 4.2667vw;
}
.order .order-affirm .pay-btn .button {
    width: 140px;
    height: 56px;
    font-size: 20px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #fff;
    line-height: 56px;
    background: #FF4444;
    text-align: center;
}
.order .order-affirm .pay-btn .button-forbid {
    width: 165px;
    height: 56px;
    line-height: 60px;
    text-align: center;
    background: #eee;
    color: #333;
}
.order .order-affirm .pay-btn .button:active,
.order .order-affirm .pay-btn .button-forbid:active {
    opacity: 0.8;
}
