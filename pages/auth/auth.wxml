<!--pages/auth/auth.wxml-->
<view class="auth">
    <image src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1586309241KigwDa.jpg" class="logo"></image>
    <view class="box">
        <button wx:if="{{didGetPhoneNumber}}" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" class="hidden-button"></button>
        <button wx:if="{{!didGetPhoneNumber}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="hidden-button"></button>
        <view class="button">{{didGetPhoneNumber ? "手机号授权" : "微信授权"}}</view>
    </view>
    <view class="rules">注册/登录即代表同意 <text class="important" bindtap="jumpToPrivacy">隐私协议</text> 和 <text class="important" bindtap="jumpToService">服务条款</text></view>
    <van-dialog title="提示" message="授权登录查看精彩内容" show="{{ show }}" show-cancel-button confirmButtonText="立即授权" confirm-button-open-type="getPhoneNumber" bind:getphonenumber="getPhoneNumber"></van-dialog>
    <van-dialog id="van-dialog" />
</view>
