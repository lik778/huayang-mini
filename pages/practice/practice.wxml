<view class="practice">
    <swiper class="banner">
        <swiper-item wx:for="{{bannerList}}" wx:key="index">
            <image mode="aspectFill" src="{{item.pic_url}}"></image>
        </swiper-item>
    </swiper>

    <view class="support-layer">
        <view class="title">练习时长</view>
        <view class="exercise-time">
            <text class="time">{{userHaveClassesInfo.study_time}}</text>
            <text class="unit">分钟</text>
        </view>
    </view>

    <!--  本周练习进度  -->
    <view class="support-layer">
        <view class="title">
            <text>本周练习</text>
            <text class="manage" bind:tap="goToPracticeManage">课程管理</text>
        </view>
        <view class="week-line">
            <view class="day-container" wx:for="{{weeklyLog}}" wx:key="index">
                <view>{{item.dateText}}</view>
                <image class="day-icon" mode="aspectFit" src="{{TagImageUrls[item.status]}}"></image>
            </view>
        </view>
    </view>

    <!--  今日练习计划  -->
    <view class="today-boot-camp-plan">
        <view class="boot-camp" wx:for="{{bootCampList}}" wx:key="index">
            <block wx:if="{{item.content.length > 0}}">
                <view class="boot-camp-name" bind:tap="goToBootCamp" data-bootCampId="{{item.bootCampId}}">
                    <text>{{item.name}}</text>
                    <view class="all-boot-camp">全部</view>
                </view>
                <view class="segmentation"></view>
                <view class="boot-camp-content">
                    <view class="boot-camp-course" wx:for="{{item.content}}" wx:for-item="contentItem" wx:for-index="contentIndex" wx:key="contentIndex">
                        <view class="boot-camp-info">
                            <view class="icon-box">
                                <image mode="aspectFit" class="icon-{{contentItem.type}}" src="{{CourseTypeImage[contentItem.type]}}"></image>
                            </view>
                            <view>{{contentItem.name || contentItem.title}}</view>
                        </view>
                        <view class="boot-camp-start" bind:tap="handleExerciseBtnTap" data-item="{{contentItem}}">{{contentItem.type==='kecheng'?'练习':'前往'}}</view>
                    </view>
                </view>
            </block>
            <block wx:if="{{item.content.length === 0}}">
                <view class="boot-camp-name" bind:tap="goToBootCamp" data-bootCampId="{{item.bootCampId}}">
                    <text>{{item.name}}</text>
                    <view class="all-boot-camp">全部</view>
                </view>
                <view class="segmentation"></view>
                <view class="no-exercise">今日暂无训练</view>
            </block>
        </view>
        <view class="boot-camp" wx:if="{{bootCampList.length === 0}}">
            <view class="no-camp">
                <text>快去挑选感兴趣的课程吧</text>
                <text class="find-camp-btn" bind:tap="goToDiscovery">去挑选</text>
            </view>
        </view>
    </view>

    <!--  推荐课程  -->
    <view class="support-layer" wx:if="{{userJoinedClassesList.length <= 0}}">
        <view class="title recommend-title">推荐课程</view>
    </view>

    <!--  课程练习列表  -->
    <view class="today-practice-list">
        <view class="practice-item" wx:if="{{userJoinedClassesList.length > 0}}" wx:for="{{userJoinedClassesList}}" wx:key="index" bind:tap="handleCourseTap" data-item="{{item}}" style="background-image:url('{{item.kecheng.cover_pic}}')">
            <view class="practice-name limit-one-line">{{item.kecheng.name}}</view>
            <view class="practice-sub">
                <view class="practice-desc">
                    <text>{{CourseLevels[item.kecheng.level]}}</text>
                    <text>{{item.kecheng.duration}}分钟</text>
                    <text>{{item.kecheng.meta_count}}个动作</text>
                </view>
                <view class="join-now">立即参加</view>
            </view>
        </view>
        <view class="practice-item" wx:if="{{userJoinedClassesList.length===0}}" wx:for="{{recommendList}}" wx:key="index" bind:tap="handleCourseTap" data-item="{{item}}" style="background-image:url('{{item.cover_pic}}')">
            <view class="practice-name limit-one-line">{{item.name}}</view>
            <view class="practice-sub">
                <view class="practice-desc">
                    <text>{{CourseLevels[item.level]}}</text>
                    <text>{{item.duration}}分钟</text>
                    <text>{{item.meta_count}}个动作</text>
                </view>
                <view class="join-now">立即参加</view>
            </view>
        </view>
    </view>
</view>
