@import "../../assets/css/common.wxss";

/* 通用布局 */
.practice {
    padding: 20rpx 40rpx;
    font-size: 0;
}

.layout {
    margin-bottom: 40rpx;
}

.layout-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
    margin-bottom: 20rpx;
}

.left {
    display: flex;
    align-items: center;
    font: 500 48rpx/48rpx PingFangSC;
}

.icon {
    width: 56rpx;
    height: 56rpx;
    margin-right: 12rpx;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1641793689eSiiiM.jpg") no-repeat center;
    background-size: contain;
}

.right {
    font: 32rpx/32rpx PingFangSC;
    color: rgba(0, 0, 0, 0.8);
}

.right::after {
    content: "";
    display: inline-block;
    width: 14rpx;
    height: 20rpx;
    margin: 6rpx 0 0 14rpx;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1641794088OtNQES.jpg") no-repeat center;
    background-size: contain;
}

.right:active {
    opacity: 0.8;
}

/* 大学介绍 */
.cover {
    width: 670rpx;
    height: 446rpx;
}

.desc {
    margin-top: 20rpx;
    font: 30rpx/42rpx PingFangSC;
}

/* 特色课程 */
.icons {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.icon-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon-item:active {
    opacity: 0.8;
}

.icon-image {
    width: 112rpx;
    height: 114rpx;
    margin-bottom: 18rpx;
}

.icon-text {
    font: 32rpx/32rpx PingFangSC;
}

/* 师资力量 */
.teachers {
}

.teacher-item {
    display: flex;
    margin-bottom: 20rpx;
}

.teacher-avatar {
    width: 240rpx;
    height: 240rpx;
}

.teacher-info {
    width: 406rpx;
    margin-left: 24rpx;
}

.teacher-name {
    margin-bottom: 20rpx;
    font: 500 32rpx/44rpx PingFangSC;
}

.teacher-desc {
    font: 28rpx/40rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

/* 精品课程 */
.courses {
}

.course-item {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.course-cover {
    width: 166rpx;
    height: 220rpx;
    margin-right: 24rpx;
}

.course-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 220rpx;
    width: calc(100% - 190rpx);
}

.course-message {
}

.course-title {
    font: 500 36rpx/36rpx PingFangSC;
}

.course-desc {
    margin: 28rpx 0 20rpx;
    font: 32rpx/32rpx PingFangSC;
}

.course-teacher {
    font: 32rpx/32rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
}

.course-view-count {
    font: 24rpx/24rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
}

/* 过往活动 */
.history-activities {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
}

.activity-item {
    position: relative;
    width: 320rpx;
    height: 162rpx;
    margin-bottom: 24rpx;
}

.activity-cover {
    width: inherit;
    height: inherit;
}

.activity-text {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 16rpx;
    font: bold 28rpx/28rpx PingFangSC;
    color: white;
    background: rgba(0, 0, 0, 0.4);
}

