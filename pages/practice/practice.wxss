@import "../../assets/css/common.wxss";
.list {
    padding-bottom: 160rpx;
}

/*推广位*/
.promotion {
    padding-bottom: 60rpx;
}

/* banner */
.swiper-box {
    height: 278rpx;
    position: relative;
}

.swiper-item-box {
    width: 100%;
    height: 250rpx;
}

.swiper-item-box image {
    width: 100%;
    height: 100%;
    /* border-radius: 8rpx; */
}

/* .swiper-item-box .swiper-cover {
  width: 100%;
  height: 100%;
  background: #D8D8D8;
} */

.swiper-dot {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 0;
}

.swiper-dot-item {
    width: 22rpx;
    height: 8rpx;
    border-radius: 4rpx;
    background: rgba(216, 216, 216, 1);
    margin-right: 8rpx;
}

.swiper-dot-item-active {
    background: #3A3C48;
}

/* 学院选项卡 */
.type-list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 26rpx 30rpx 20rpx;
    background: #fff;
}

.main-title-item {
    font: 500 36rpx/60rpx PingFangSC;
    color: rgba(0, 0, 0, 1);
}

.main-title-item:last-child {
    margin-right: 0;
}

.active {
    position: relative;
    font: 500 40rpx/60rpx PingFangSC;
    color: #CC0000;
}

.active::after {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -8rpx;
    content: "";
    width: 84rpx;
    height: 8rpx;
    border-radius: 4rpx;
    background: #CC0000;
}

/* 视频课程列表 */
.list-main {
    margin: 0 auto;
    padding: 20rpx 0 50rpx;
    width: calc(100% - 60rpx);
}

.list-none {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.list-none image {
    width: 550rpx;
    height: 300rpx;
    vertical-align: bottom;
}

.list-none-text {
    font: 36rpx/36rpx PingFangSC;
    padding-left: 24rpx;
    color: rgba(0, 0, 0, 0.4);
}

.course-item {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    margin-bottom: 30rpx;
}

.course-item:active {
    opacity: 0.9;
}

.course-image {
    width: 166rpx;
    height: 220rpx;
    font-size: 0;
    border-radius: 8rpx;
    margin-right: 24rpx;
}

.course-info {
    width: calc(100% - 190rpx);
    height: 220rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

/* 视频改版 */
.course-info-main-title {
    height: 36rpx;
    font: 500 36rpx/36rpx PingFangSC;
    color: #000000;
}

.course-info-sub-title {
    height: 32rpx;
    font: 32rpx/32rpx PingFangSC;
    color: #000000;
    margin: 28rpx 0 20rpx;
}

.course-info-teacher {
    height: 32rpx;
    font: 32rpx/32rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
}

.course-info-bottom-right-module-one {
    font: 500 32rpx/32rpx PingFangSC;
    color: #CC0000;
}

.course-info-bottom-left-module-two {
    font: 28rpx/28rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
    line-height: 28rpx;
    padding-left: 10rpx;
}

.course-info-bottom-right-module-one-two {
    font: 500 32rpx/32rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
    text-decoration-line: line-through;
    padding-left: 10rpx;
}

.course-info-bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.course-info-bottom-right {
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.6);
    line-height: 28rpx;
}

.course-info-bottom-left-module-one {
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    line-height: 32rpx;
}

.course-logo {
    position: relative;
}

.course-logo-icon {
    position: absolute;
    right: 24rpx;
    top: 0;
    width: 52rpx;
    height: 30rpx;
    border-top-right-radius: 8rpx;
}

.course-logo-icon-one {
    width: 32rpx;
}

/* 视频改版 */

.course-title {
    font: 32rpx/44rpx PingFangSC;
    color: #000;
}

.course-operate {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.course-visit-count {
    font: 28rpx/40rpx PingFangSC;
    color: #666;
}

.price {
    font: 32rpx/44rpx PingFangSC;
}

.price-one {
    margin-right: 20rpx;
    font: 32rpx/44rpx PingFangSC;
    color: #CC0000;
}

.price-two {
    font: 28rpx/40rpx PingFangSC;
    color: #666;
    text-decoration: line-through;
}

.price-three {
    margin-right: 20rpx;
    font: 32rpx/32rpx PingFangSC;
    color: #CC0000;
}
