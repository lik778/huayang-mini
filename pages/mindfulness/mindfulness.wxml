<view class="container" style="padding-top:  {{statusHeight+44}}px;">
    <naviBar title="" style="padding-top: {{statusHeight+44}}px;" color="transparent" titleColor="#000000"></naviBar>
    <image class="bg" src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1657272555PYtbbm.jpg" mode="aspectFill" />

    <view class="time-wrap">
        <canvas type="2d" id="bgCanvas" />
        <canvas type="2d" id="waveCanvas" />
        <canvas type="2d" id="progressCanvas" />

        <view class="content">
            <view class="title">深入睡眠冥想</view>
            <view class="subtitle">共5分钟</view>
        </view>
    </view>

    <view class="operate">
        <image class="left" bindtap="_backward" mode="aspectFit" src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1657691924REIFWm.jpg"></image>
        <image class="center" bindtap="_toggleAudio" mode="aspectFit" src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1657691902uJPnQb.jpg"></image>
        <image class="right" bindtap="_speed" mode="aspectFit" src="https://huayang-img.oss-cn-shanghai.aliyuncs.com/1657691935Qovbmu.jpg"></image>
    </view>
</view>
