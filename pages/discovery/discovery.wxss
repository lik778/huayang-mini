/* pages/ discovery/discovery.wxss */
.discovery {
  background: #F9F9F9;
  /* background: red; */
}

.module-one,
.module-two {
  padding: 0 30rpx;
  background: #fff;
}

.module-one {
  padding-bottom: 25px;
}

.module-two {
  padding-bottom: 180rpx;
}

/* banner */
.swiper-box {
  height: 240rpx;
  position: relative;
}

.swiper-item-box {
  width: 100%;
  height: 210rpx;
}

.swiper-item-box image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

/* .swiper-item-box .swiper-cover {
  width: 100%;
  height: 100%;
  background: #D8D8D8;
} */

.swiper-dot {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
}

.swiper-dot-item {
  width: 22rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: rgba(216, 216, 216, 1);
  margin-right: 8rpx;
}

.active {
  background: #3A3C48;
}

/* 训练营 */
.camp {
  padding-top: 52rpx;
}

.camp-title,
.catwalk-title,
.fashion-title,
.competition-title,
.activity-title {
  font-size: 52rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 52rpx;
  margin-bottom: 40rpx;
}

.camp-item {
  position: relative;
  height: 320rpx;
  margin-bottom: 30rpx;
}

.camp-item:last-child {
  margin-bottom: 0;
}

.camp-item>image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.camp-item-main {
  width: calc(100% - 60rpx);
  position: absolute;
  left: 30rpx;
  top: 52rpx;
}

.camp-item-title {
  font-size: 44rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
  padding-bottom: 30rpx;
}

.camp-subtitle {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 32rpx;
}

.camp-button {
  position: absolute;
  left: 30rpx;
  bottom: 52rpx;
  width: 200rpx;
  height: 60rpx;
  border-radius: 999rpx;
  border: 3rpx solid rgba(255, 255, 255, 1);
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 60rpx;
}

/* 走秀课 */
.catwalk,
.fashion,
.competition,
.activity {
  padding-top: 80rpx;
}


.catwalk-item {
  width: 100%;
  height: 200rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.catwalk-item-title {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  font-size: 44rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
}

.catwalk-item-subtitle {
  position: absolute;
  left: 30rpx;
  bottom: 38rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
}

.catwalk-item-subtitle text {
  margin-right: 1em;
}

.catwalk-item-button {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  width: 200rpx;
  height: 60rpx;
  border-radius: 999rpx;
  border: 3rpx solid rgba(255, 255, 255, 1);
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 60rpx;
}

.catwalk-item>image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.catwalk-item:last-child {
  margin-bottom: 0;
}

/* 时尚课 */
.fashion-item {
  display: flex;
  justify-content: space-between;
  padding-bottom: 50rpx;
}

.fashion-item>image {
  width: 240rpx;
  height: 194rpx;
  border-radius: 8rpx;
}

.fashion-item-right {
  width: calc(100% - 260rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.fashion-item-right-top {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 44rpx;
}

.fashion-item-right-bottom {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(204, 0, 0, 1);
  line-height: 36rpx;
}

/* 大赛 */
.module-two {
  margin-top: 20rpx;

}

.competition {
  padding-top: 60rpx;
}

.competition-item {
  position: relative;
}

.competition-item>image {
  width: 100%;
  height: 284rpx;
  border-radius: 8rpx;
}

.competition-item-title {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 52rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 74rpx;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 活动 */

.activity-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.activity-item {
  width: 336rpx;
  padding-bottom: 30rpx;
}

.activity-item>image {
  width: 336rpx;
  height: 248rpx;
  border-radius: 8rpx;
  vertical-align: bottom;
}

.activity-item-desc-title {
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 56rpx;
  padding-top: 20rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.activity-item-desc-time {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}

.activity-item-desc-area {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
  margin-top: 4rpx;
}

.activity-item-desc-price {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
  line-height: 44rpx;
  padding-top: 10rpx;

}

.activity-item-desc-price text:first-child {
  text-decoration: line-through;
}

.activity-item-desc-price text:last-child {
  color: rgba(204, 0, 0, 1);
  margin-left: 10rpx;
}