@import "../../assets/css/common.wxss";

.discovery {
  padding-bottom: 250rpx;
  background: #fff;
}

/* banner */
.swiper-box {
  display: flex;
  justify-content: center;
  height: 310rpx;
  margin: 20rpx 0 0rpx;
  position: relative;
}

.swiper-item-box {
  width: 670rpx;
  height: 310rpx;
}

.swiper-item-box image {
  width: 100%;
  height: 100%;
}

.swiper-dot {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20rpx;
}

.swiper-dot-item {
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: white;
  margin-right: 8rpx;
}

.swiper-dot-item-active {
  background: #FF5544;
}

/* icons */
.icons {
  overflow: hidden;
  padding: 40rpx 40rpx 0;
}

.floor {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.f1, .f3 {
  padding: 0 16rpx;
}

.f2 {
  padding: 0 22rpx;
}

.f-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 0;
}

.f1 .f-icon, .f3 .f-icon {
  width: 112rpx;
  height: 112rpx;
  border-radius: 999rpx;
  background: #aaaaaa;
}

.f1 .f-title, .f3 .f-title {
  margin-top: 20rpx;
  font: 32rpx/32rpx PingFangSC;
}

.f2 .f-icon {
  width: 80rpx;
  height: 80rpx;
  background: #aaaaaa;
}

.f2 .f-title {
  margin-top: 20rpx;
  font: 28rpx/28rpx PingFangSC;
}

.f3 .f-icon {
  border-radius: 0;
}
