@import "../../assets/css/common.wxss";

.discovery {
  padding-bottom: 250rpx;
  background: #fff;
}

/* icons */
.icons {
  padding: 250rpx 0;
  text-align: center;
  background: #eeeeee;
}

/* banner */
.swiper-box {
  display: flex;
  justify-content: center;
  height: 310rpx;
  margin: 20rpx 0 40rpx;
  position: relative;
}

.swiper-item-box {
  width: 670rpx;
  height: 310rpx;
}

.swiper-item-box image {
  width: 100%;
  height: 100%;
}

.swiper-dot {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20rpx;
}

.swiper-dot-item {
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: white;
  margin-right: 8rpx;
}

.swiper-dot-item-active {
  background: #FF5544;
}
