@import "../../assets/css/common.wxss";

.discovery {
  padding-bottom: 250rpx;
  background: #fff;
}

/* icons */
.icons {
  padding: 250rpx 0;
  text-align: center;
  background: #eeeeee;
}

/* banner */
.swiper-box {
  display: flex;
  justify-content: center;
  height: 310rpx;
  margin: 20rpx 0 40rpx;
  position: relative;
}

.swiper-item-box {
  width: 670rpx;
  height: 310rpx;
}

.swiper-item-box image {
  width: 100%;
  height: 100%;
}

.swiper-dot {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20rpx;
}

.swiper-dot-item {
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: white;
  margin-right: 8rpx;
}

.swiper-dot-item-active {
  background: #FF5544;
}


/* 生活方式 */
.life-style-title {
  padding: 0 40rpx;
  font-size: 48rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 48rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

/* 已经到底啦 */
.is-bottom-module {
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
}

.is-bottom {
  width: 350rpx;
  height: 30rpx;
  vertical-align: bottom;
}