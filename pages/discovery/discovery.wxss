@import "../../assets/css/common.wxss";
.discovery {
  position: relative;
  background: #fff;
}

/*推广位*/
.promotion {
    padding: 0 30rpx 30rpx;
}

/*导航栏*/
.tabs {
  position: relative;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.tabs.tabs-fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: white;
}

.tab {
  margin-right: 60rpx;
  font: 500 44rpx/60rpx PingFangSC;
}

.tab-underline {
  position: absolute;
  bottom: 0;
  height: 8rpx;
  width: 44px;
  border-radius: 999rpx;
  background: #CC0000;
  /*transition: left ease 300ms;*/
}

.tab-active {
  /*font: 500 52rpx/74rpx PingFangSC;*/
  color: #CC0000;
}

.tab-pane {
  padding: 32rpx 30rpx 200rpx;
  background: #F9F9F9;
}

/* banner */
.swiper-box {
  height: 350rpx;
  position: relative;
}

.swiper-item-box {
  width: 100%;
  height: 320rpx;
}

.swiper-item-box image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

/* .swiper-item-box .swiper-cover {
  width: 100%;
  height: 100%;
  background: #D8D8D8;
} */

.swiper-dot {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
}

.swiper-dot-item {
  width: 22rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: rgba(216, 216, 216, 1);
  margin-right: 8rpx;
}

.active {
  background: #3A3C48;
}

/* 直播 */
.live {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font: 500 52rpx/52rpx PingFangSC;
  margin: 70rpx 0;
  height: 76rpx;
}

.live.hidden {
    padding-bottom: 200rpx;
}

.live-title-right {
  font: 32rpx/44rpx PingFangSC;
  padding-left: 100rpx;
}

/* 大赛 */
.activity {
  padding-top: 100rpx;
}
.other-activity {}
.competition-title,
.activity-title {
  margin: 70rpx 0 20rpx;
  height: 76rpx;
  font: 500 52rpx/76rpx PingFangSC;
  color: rgba(0, 0, 0, 1);
}

.competition {
}

.competition-item {
  position: relative;
  height: 320rpx;
  margin-bottom: 30rpx;
}

.competition-item>image {
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
}

.competition-item-title {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 52rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 74rpx;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 活动 */
.activity-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.activity-item {
  width: 336rpx;
  padding-bottom: 30rpx;
}

.activity-item>image {
  width: 336rpx;
  height: 248rpx;
  border-radius: 8rpx;
  vertical-align: bottom;
}

.activity-item-desc-title {
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 56rpx;
  padding-top: 20rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.activity-item-desc-time {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}

.activity-item-desc-area {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
  margin-top: 4rpx;
}

.activity-item-desc-price {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
  line-height: 44rpx;
  padding-top: 10rpx;

}

.activity-item-desc-price text:first-child {
  text-decoration: line-through;
}

.activity-item-desc-price text:last-child {
  color: rgba(204, 0, 0, 1);
  margin-left: 10rpx;
}
/*视频课*/
.course-layout {
  font: 500 52rpx/52rpx PingFangSC;
  margin: 80rpx 0 40rpx;
}
.course-item {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}
.course-item:active {
  opacity: 0.9;
}
.course-image {
  width: 220rpx;
  height: 220rpx;
  font-size: 0;
  border-radius: 8rpx;
  margin-right: 24rpx;
}
.course-info {
  width: 446rpx;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.course-title {
  font: 32rpx/44rpx PingFangSC;
  color: #000;
}
.course-operate {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.course-visit-count {
  font: 28rpx/40rpx PingFangSC;
  color: #666;
}
.price {
  font: 32rpx/44rpx PingFangSC;
}
.price-one {
  margin-right: 20rpx;
  font: 500 32rpx/44rpx PingFangSC;
  color: #CC0000;
}

.price-two {
  font: 28rpx/40rpx PingFangSC;
  color: #666;
  text-decoration: line-through;
}

.price-three {
  margin-left: 20rpx;
  font: 500 32rpx/32rpx PingFangSC;
  color: #CC0000;
}

.course-item-more-btn {
  width: 690rpx;
  height: 88rpx;
  font: 500 40rpx/88rpx PingFangSC;
  color: white;
  background: #CC0000;
  text-align: center;
  border-radius: 999rpx;
}
.course-item-more-btn:active {
  opacity: 0.8;
}

/*主题营*/
.card {
  position: relative;
  height: 570rpx;
}
.bootcampCardItem {
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 690rpx;
  height: 320rpx;
  border-radius: 24rpx 24rpx 4rpx 4rpx;
}
.fixText {
  position: absolute;
  top: 186rpx;
  left: 30rpx;
  width: 630rpx;
  color: white;
  font: 700 40rpx/40rpx PingFangSC;
}
.bootcamp-title {
  font: 600 44rpx/60rpx PingFangSC;
  margin-top: 10rpx;
}
.bootcamp-summary {
  font: 32rpx/44rpx PingFangSC;
}
.bootcamp-content {
  position: absolute;
  top: 340rpx;
  left: 0;
  right: 0;
}
.bootcamp-feature {
  display: flex;
  align-items: center;
}
.feature-tag {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-right: 30rpx;
  font: 24rpx/34rpx PingFangSC;
  color: #666666;
}
.feature-icon {
  margin-right: 6rpx;
  width: 40rpx;
  height: 40rpx;
  font-size: 0;
}
.bootcamp-next-date {
  margin: 20rpx 0 10rpx;
  font: 28rpx/40rpx PingFangSC;
  color: #000;
}
.bootcamp-operate {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bootcamp-operate-price {
}
.bootcamp-operate-discount-price {
  margin-right: 12rpx;
  font: 500 44rpx/60rpx PingFangSC;
  color: #CC0000;
}
.bootcamp-operate-sub-price {
  text-decoration: line-through;
  font: 28rpx/40rpx PingFangSC;
  color: #666;
}
.bootcamp-operate-btn {
  width: 200rpx;
  height: 64rpx;
  border-radius: 999rpx;
  background: #CC0000;
  color: white;
  text-align: center;
  font: 500 32rpx/64rpx PingFangSC;
}
.bootcamp-operate-btn:active {
  opacity: 0.8;
}
