@import "../../assets/css/common.wxss";

.discovery {
  padding-bottom: 250rpx;
  background: #fff;
}

/*推广位*/
.promotion {
  padding-bottom: 60rpx;
}

/* banner */
.swiper-box {
  height: 139px;
  position: relative;
}

.swiper-item-box {
  width: 100%;
  height: 125px;
}


.swiper-item-box image {
  width: 100%;
  height: 100%;
  /* border-radius: 8rpx; */
}

/* .swiper-item-box .swiper-cover {
  width: 100%;
  height: 100%;
  background: #D8D8D8;
} */

.swiper-dot {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
}

.swiper-dot-item {
  width: 22rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: rgba(216, 216, 216, 1);
  margin-right: 8rpx;
}

.active {
  background: #3A3C48;
}

/* 金刚位 */
.king-kong {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 60rpx 80rpx;
}

.king-kong-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 0;
}

.king-kong-item:active {
  opacity: 0.8;
}

.king-kong-picture {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 999rpx;
}

.king-kong-text {
  font: 28rpx/28rpx PingFangSC;
}

/* 花样大学介绍 */
.hy-intro {
  padding: 0 30rpx 80rpx;
  font-size: 0;
}

.layer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 40rpx;
  font: 500 52rpx/52rpx PingFangSC;
}

.hy-intro-btn {
  font: 500 28rpx/28rpx PingFangSC;
  color: #CC0000;
}

.hy-intro-video-wrap {
  position: relative;
  font-size: 0;
}

.hy-video {
  width: 100%;
  height: 344rpx;
  border-radius: 16rpx;
}

.pause-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 112rpx;
  height: 112rpx;
}

/* 线下精品课 */
.offline-course {
  padding: 0 30rpx 40rpx;
}

/* 线下课卡片样式 */
.offline-course-item {
  margin-bottom: 40rpx;
  font-size: 0;
}

.offline-course-item:last-child {
  margin: 0;
}

.pic {
  width: 100%;
  height: 344rpx;
  border-radius: 16rpx 16rpx 6rpx 6rpx;
}

.title {
  margin: 16rpx 0;
  font: 500 36rpx/50rpx PingFangSC;
}

.info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-wrap {
  display: flex;
  align-items: center;
}

.price-wrap {
  margin-right: 20rpx;
  font: 32rpx/48rpx PingFangSC;
  color: #CC0000;
}

.price-wrap > .price {
  font-size: 48rpx;
}

.discount-price-wrap {
  font-size: 0;
  color: #996633;
}

.discount-price {
  line-height: 32rpx;
  vertical-align: middle;
  font: 32rpx/32rpx PingFangSC;
}

.discount-price-wrap > .tag {
  width: 94rpx;
  height: 36rpx;
  margin-left: 4rpx;
  vertical-align: middle;
}

.no {
  font: 32rpx/32rpx PingFangSC;
  color: rgba(0,0,0, .6)
}

/* 大学活动 */
.college-activity {
  padding: 0 30rpx 40rpx;
}


.college-activity-item {
  margin-bottom: 40rpx;
  font-size: 0;
}

.college-activity-picture {
  width: 100%;
  height: 344rpx;
  margin-bottom: 16rpx;
  border-radius: 16rpx 16rpx 6rpx 6rpx;
}

.college-activity-title {
  font: 500 36rpx/50rpx PingFangSC;
}

/* 大赛 */
.other-activity {
  margin: 0 30rpx;
}

.competition-title {
  margin: 40rpx 0 20rpx;
  height: 76rpx;
  font: 500 52rpx/76rpx PingFangSC;
  color: rgba(0, 0, 0, 1);
}

.separate-line {
  height: 20rpx;
  background: #F9F9F9;
}

.competition-item {
  position: relative;
  height: 320rpx;
  margin-bottom: 30rpx;
}

.competition-item>image {
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
}

.competition-item-title {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 52rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 74rpx;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 引导加入花样学习活动群 */
.guide-wrap {
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 60px + 24rpx);
  left: 24rpx;
  right: 24rpx;
}

.guide {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  padding: 24rpx 44rpx;
  box-sizing: border-box;
  border-radius: 999rpx;
  font-size: 0;
  background: white;
  box-shadow: 0 0 20px 4px rgba(0, 0, 0, 0.08);
  transform: translateY(150%);
  transition: transform 200ms cubic-bezier(.5,.21,.43,.95);
}

.guide.animation {
  transform: translateY(0);
}

.guide-pic {
  width: 72rpx;
  height: 72rpx;
  vertical-align: middle;
}

.guide-text {
  display: inline-block;
  vertical-align: middle;
  margin-left: 20rpx;
  font: bold 28rpx/32rpx PingFangSC;
}

.guide-btn {
  width: 136rpx;
  height: 64rpx;
  text-align: center;
  font: 500 32rpx/64rpx PingFangSC;
  border-radius: 999rpx;
  color: white;
  background: #CC0000;
  animation: guideFlashing 4s ease infinite;
}

.guide-close-icon {
  position: absolute;
  right: 4rpx;
  top: -40rpx;
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}

/* 活动 */
.activity-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.activity-item {
  width: 336rpx;
  padding-bottom: 30rpx;
}

.activity-item>image {
  width: 336rpx;
  height: 248rpx;
  border-radius: 8rpx;
  vertical-align: bottom;
}

.activity-item-desc-title {
  font-size: 40rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 56rpx;
  padding-top: 20rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.activity-item-desc-time {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
}

.activity-item-desc-area {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
  margin-top: 4rpx;
}

.activity-item-desc-price {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
  line-height: 44rpx;
  padding-top: 10rpx;
}

.activity-item-desc-price text:first-child {
  text-decoration: line-through;
}

.activity-item-desc-price text:last-child {
  color: rgba(204, 0, 0, 1);
  margin-left: 10rpx;
}

/* 花样游学 */
.travel {
  padding: 0 30rpx;
  background: white;
}

.travel-layout {
  margin: 40rpx 0;
  font: 500 52rpx/52rpx PingFangSC;
}

.travel-item:active {
  opacity: 0.9;
}

.travel-cover {
  overflow: hidden;
  width: 690rpx;
  height: 344rpx;
  border-radius: 16rpx 16rpx 6px 6px;
}

.travel-title {
  margin: 24rpx 0 12rpx;
  font: 500 36rpx/50rpx PingFangSC;
}

.travel-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 40rpx;
}

.travel-price {
  display: flex;
  align-items: flex-end;
  font: 32rpx/32rpx PingFangSC;
  color: #CC0000;
}

.price-01 {
  margin: 0 8rpx 0 4rpx;
  font: 52rpx/52rpx PingFangSC;
}

.price-02 {
  text-decoration: line-through;
  font: 32rpx/32rpx PingFangSC;
  color: rgba(0, 0, 0, 0.6);
}

.travel-visit-no {
  font: 32rpx/32rpx PingFangSC;
  color: rgba(0,0,0, 0.6);
}

.more-travel {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 690rpx;
  height: 88rpx;
  margin: 40rpx auto 100rpx;
  border-radius: 999rpx;
  border: 1rpx solid black;
  font: 500 36rpx/36rpx PingFangSC;
}

.more-travel:active {
  opacity: 0.9;
}

/* 今日推荐 */
.today-recommend {
  margin: 0 30rpx;
  font: 500 52rpx/52rpx PingFangSC;
}

.preview-video {
  width: 690rpx;
  height: 344rpx;
  margin: 40rpx 0 28rpx;
  border-radius: 16rpx 16rpx 6rpx 6rpx;
}

.recommend-course-title {
  font: 500 44rpx/44rpx PingFangSC;
  margin-bottom: 24rpx;
}

.recommend-course-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font: 36rpx/36rpx PingFangSC;
}

.recommend-course-info-title {
  width: 580rpx;
}

.about-recommend-course {
  color: rgba(0,0,0,0.6)
}

/* 全局消息弹窗 */
.information {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.information-mask {
  opacity: 0;
  height: 100vh;
  background: rgba(0,0,0, 0.5);
  transition: opacity 0.2s ease-in;
}

.information-mask.animation {
  opacity: 1;
}

.information-pop-picture-wrap {
  position: absolute;
  top: 0;
  left: calc(50vw - 300rpx);
  width: 600rpx;
}

.information-pop-picture {
  width: 100%;
  transform: translateY(100%) scale(0);
  transition: transform 0.2s cubic-bezier(.5,.21,.43,.95);
}

.information-pop-picture.animation {
  transform: translateY(0%) scale(1);
}

.information-content {
  position: absolute;
  top: calc(50vh - 400rpx);
  left: 75rpx;
  width: 600rpx;
  height: 652rpx;
  padding: 94rpx 42rpx 60rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  background: white;
  transform: translateY(100%) scale(0);
  transition: transform 0.2s cubic-bezier(.5,.21,.43,.95);
}

.information-pop-clock {
  position: absolute;
  top: -98rpx;
  left: 234rpx;
  width: 136rpx;
  height: 156rpx;
  background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1617872755wqFTIb.jpg") no-repeat center;
  background-size: contain;
}

.information-pop-clock-item {
  position: absolute;
  top: 18rpx;
  left: 8rpx;
  width: 104rpx;
  height: 122rpx;
  background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1617872981wcgCnx.jpg") no-repeat center;
  background-size: contain;
  transform-origin: top right;
}

.information-pop-clock-item.animation {
  animation: information-pop-clock-anime 0.4s ease-in 0.2s 2;
}

@keyframes information-pop-clock-anime {
  0% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(5deg);
  }
  50% {
    transform: rotate(-5deg);
  }
  100% {
    transform: rotate(0deg);
  }
}

.information-content.animation {
  transform: translateY(0%) scale(1);
}

.information-pop-title {
  font: 500 54rpx/76rpx PingFangSC;
  text-align: center;
}

.information-pop-info {
  overflow: hidden;
  margin: 50rpx 0 56rpx;
}

.information-teacher-avatar {
  float: left;
  width: 166rpx;
  height: 220rpx;
}

.information-course-info {
  width: 326rpx;
  margin-left: 190rpx;
}

.information-course-name {
  white-space: nowrap;
  font: 500 36rpx/36rpx PingFangSC;
}

.information-course-desc {
  margin: 20rpx 0 32rpx;
  font: 32rpx/44rpx PingFangSC;
}

.information-course-teacher-info {
  font: 28rpx/32rpx PingFangSC;
  color: rgba(0,0,0, 0.6);
}

.information-pop-btn {
  width: 500rpx;
  height: 96rpx;
  margin: 0 auto;
  font: 500 40rpx/96rpx PingFangSC;
  color: white;
  text-align: center;
  border-radius: 999rpx;
  background: #CC0000;
}

.information-pop-close {
  position: absolute;
  top: -92rpx;
  right: 0;
  margin: 30rpx 0 30rpx 30rpx;
  width: 32rpx;
  height: 32rpx;
  z-index: 96;
}

@keyframes guideFlashing {
  16% {
    transform: scale(1);
  }

  20% {
    transform: scale(1.05);
  }

  24% {
    transform: scale(1);
  }

  28% {
    transform: scale(1.05);
  }

  32% {
    transform: scale(1);
  }
}

