@import "../../assets/css/common.wxss";
.mall {
    background: white;
    font-size: 0;
}
.banner {
    overflow: hidden;
    width: 688rpx;
    /*height: 344rpx;*/
    margin: 32rpx auto;
    border-radius: 16rpx;
}
.swiper-image {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}
.swp-dot {
    display: flex;
    justify-content: center;
    flex: 1;
    margin-top: -24rpx;
}

.m-r-8 {
    margin-right: 8rpx;
}

.m-l-8 {
    margin-right: 8rpx;
}

.square-12 {
    width: 8rpx;
    height: 8rpx;
    background-color: white;
    border-radius: 915rpx;
    transition: width 0.2s linear;
    z-index: 100;
}

.active {
    background-color: rgba(255, 68, 51, 1);
    transition: width 0.2s linear;
}

.swiper {
    height: inherit;
}

.category {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
    margin-top: 70rpx;
    padding-bottom: 70rpx;
}
.category-item {
    display: flex;
    flex-basis: 25%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.category-item image {
    width: 96rpx;
    height: 96rpx;
}
.category-item text {
    margin-top: 20rpx;
    line-height: 28rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(0,0,0,.8);
}
.product-item {
  margin: 40rpx 32rpx;
}
.preview-image {
    overflow: hidden;
}
.multiple-mode {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0;
}
.multiple-mode-left {
    overflow: hidden;
    width: 452rpx;
    height: 452rpx;
    border-radius: 16rpx 6rpx 6rpx 6rpx;
}
.multiple-mode-right {
    height: 452rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}
.multiple-mode-right image {
    overflow: hidden;
    width: 218rpx;
    height: 218rpx;
    border-radius: 6rpx 16rpx 6rpx 6rpx;
}
.normal-mode {
    width: 688rpx;
    height: 688rpx;
    border-radius: 24rpx 24rpx 6rpx 6rpx;
}
.product-name {
    margin: 24rpx 0 14rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: rgb(0,0,0)
}
.product-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
}
.price {
    font-size: 32rpx;
}
.unit {
    font-size: 24rpx;
}
.buying {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 160rpx;
    height: 72rpx;
    box-sizing: border-box;
    border: 2rpx solid rgba(255, 68, 51, 1);
    border-radius: 915rpx;
    color: rgba(255, 68, 51, 1);
    font-size: 32rpx;
}
.buying:active {
    opacity: 0.8;
}
