/* pages/mall/mall.wxss */
.mall {
    background: #eee;
    min-height: 100vh;
}

.list-main {}

.list-item {
    background: #fff;
    margin-bottom: 40rpx;
    padding-bottom: 40rpx;
}

.swiper {
    width: 100vw;
    height: 400rpx;
}

.swiper-item {
    width: 100%;
    height: 100%;
}

.swiper-img {
    width: 100%;
    height: 100%;
}

.des {
    padding: 30rpx 0;
    display: flex;
    align-items: flex-end;
}

.title {
    font-size: 18px;

    padding-left: 40rpx;
    font-weight: bold;
}

.price {
    font-size: 14px;
    color: #f44;
    padding-left: 20rpx;
}

.buy-button {
    display: inline-block;
    width: calc(100vw - 120rpx);
    margin: 0 60rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: rgb(230, 68, 65);
    color: #FFFFFF;
    text-align: center;
    font-size: 18px;
    border-radius: 10rpx;
}