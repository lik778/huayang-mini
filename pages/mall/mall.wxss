@import "../../assets/css/common.wxss";
.mall {
    background: white;
    font-size: 0;
}
.banner {
    width: 688rpx;
    height: 344rpx;
    margin: 32rpx auto;
    background: #aaa;
}
.category {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    padding: 0 46rpx;
}
.category-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.category-item image {
    width: 96rpx;
    height: 96rpx;
}
.category-item text {
    margin-top: 20rpx;
    line-height: 28rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(0,0,0,.8);
}
.product-item {
  margin: 40rpx 32rpx;
}
.preview-image {
    overflow: hidden;
}
.normal-mode {
    width: 688rpx;
    height: 688rpx;
    border-radius: 24rpx 24rpx 6rpx 6rpx;
}
.product-name {
    margin: 24rpx 0 14rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: rgb(0,0,0)
}
.product-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
}
.price {
    font-size: 32rpx;
}
.unit {
    font-size: 24rpx;
}
.buying {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 160rpx;
    height: 72rpx;
    box-sizing: border-box;
    border: 1rpx solid rgba(255, 68, 51, 1);
    border-radius: 915rpx;
    color: rgba(255, 68, 51, 1);
    font-size: 32rpx;
}
.buying:active {
    opacity: 0.8;
}
