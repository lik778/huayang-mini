<view class="mall">
	<view class="banner"></view>

	<view class="category">
		<view class="category-item" wx:for="{{categoryList}}" wx:key="index">
			<image src="{{item.pic}}"></image>
			<text>{{item.name}}</text>
		</view>
	</view>

	<block wx:for="{{productList}}" wx:key="index">
		<view class="product-item">
			<view class="preview-image">
				<image class="normal-mode" src="{{item.cover_image}}"></image>
				<view class="split-mode"></view>
			</view>
			<text class="product-name limit-two-line">{{item.name}}</text>
			<view class="product-info">
				<view class="price"><text class="unit">¥</text>{{item.discount_price / 100}}</view>
				<view class="buying" bindtap="buy" data-item="{{item}}">购买</view>
			</view>
		</view>
		<view class="ad">ad-banner</view>
	</block>
</view>
