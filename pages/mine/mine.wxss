/* pages/mine/mine.wxss */
.user-module{
    padding: 40rpx 40rpx;
}
.head-img-line {
    display: flex;
    align-items: center;
}

.head-img {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.nick-name-line {
    display: flex;
    align-items: center;
}

.process {
    background: #ccc;
    position: relative;
    width: 400rpx;
    height: 10rpx;
    border-radius: 6rpx;
}

.process-line {
    display: flex;
    align-items: center;
    padding: 40rpx 40rpx;
}

.inner-process {
    position: absolute;
    left: 0;
    top: 0;
    height: 10rpx;
    background: #f44;
    border-radius: 6rpx;
}

.invite-list {
    padding: 40rpx 40rpx;
}

.invite-list-line {
    display: flex;
    align-items: center;
    padding: 40rpx 0;
    flex-wrap: wrap;
}

.invite-img {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}