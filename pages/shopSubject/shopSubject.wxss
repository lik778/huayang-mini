@import "../../assets/css/common.wxss";
.shop-subject {
    overflow: hidden;
}

/* banner */
.swiper-box {
    display: flex;
    justify-content: center;
    height: 310rpx;
    margin: 20rpx 0 0rpx;
    position: relative;
}

.swiper-item-box {
    width: 670rpx;
    height: 310rpx;
}

.swiper-item-box image {
    width: 100%;
    height: 100%;
}

.swiper-dot {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 20rpx;
}

.swiper-dot-item {
    width: 8rpx;
    height: 8rpx;
    border-radius: 4rpx;
    background: white;
    margin-right: 8rpx;
}

.swiper-dot-item-active {
    background: #FF5544;
}

.layout-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
    padding: 40rpx 40rpx 20rpx;
}

.lay-title {
    font: 500 48rpx/48rpx PingFangSC;
}

.lay-more {
    font: 32rpx/32rpx PingFangSC;
    color: rgba(0,0,0, 0.8);
}

.lay-more::after {
    display: inline-block;
    content: "";
    width: 14rpx;
    height: 20rpx;
    margin-left: 14rpx;
    font-size: 0;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1638950695LusqSo.jpg") no-repeat center;
    background-size: contain;
    vertical-align: unset;
}

/* 正在招生 */
.admission {}

.ads-content {}

.ads-item {
    overflow: hidden;
    padding: 0 40rpx 40rpx;
    height: 240rpx;
}

.item-cover {
    float: left;
    width: 240rpx;
    height: 240rpx;
    font-size: 0;
}

.item-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 264rpx;
    height: inherit;
}

.info-title {
    margin-top: 4rpx;
    font: 500 32rpx/44rpx PingFangSC;
}

.info-desc {
    display: block;
    margin-top: 16rpx;
    font: 28rpx/40rpx PingFangSC;
    color: rgba(0,0,0, 0.6);
}

.info-operate {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.info-price {
    font: 48rpx/48rpx PingFangSC;
    color: #FF5544;
}

.info-price::before {
    content: "¥";
    display: inline-block;
    margin: 0 6rpx 4rpx 0;
    font: 32rpx/32rpx PingFangSC;
    color: #FF5544;
}

.info-btn {
    width: 192rpx;
    height: 64rpx;
    text-align: center;
    font: 32rpx/64rpx PingFangSC;
    color: white;
    background: #FF5544;
}

/* 课程咨询 */
.consult {}

.consult-content {
    overflow: hidden;
    margin-bottom: 48rpx;
    padding: 0 40rpx;
}

.consult-image {
    float: left;
    width: 240rpx;
    height: 240rpx;
    margin-top: 8rpx;
    font-size: 0;
}

.consult-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 264rpx;
    height: 248rpx;
}

.consult-title {
    font: 500 32rpx/32rpx PingFangSC;
}

.consult-btn {
    width: 248rpx;
    height: 64rpx;
    font: 28rpx/64rpx PingFangSC;
    text-align: center;
    background: #F7F7F9;
    color: #657D95;
}

.consult-btn.phone::before, .consult-btn.service::before {
    content: "";
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
    font-size: 0;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1638952246wYiQgH.jpg") no-repeat center;
    background-size: contain;
    vertical-align: sub;
}

.consult-btn.service::before {
    background-image: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1638952251ZYQuys.jpg");
}

.consult-time {
    font: 28rpx/40rpx PingFangSC;
    color: rgba(0,0,0, 0.6);
}

/* 常见问题 */
.question {}

.question-content {
    margin: 0 40rpx 80rpx;
    padding: 40rpx;
    background: #F7F7F9;
}

.qs-item {
    margin-bottom: 40rpx;
}

.qs-item:last-child {
    margin-bottom: 0;
}

.qs-item-title {
    margin-bottom: 20rpx;
    font: 500 32rpx/44rpx PingFangSC;
}

.qs-item-answer {
    font: 32rpx/44rpx PingFangSC;
    color: rgba(0,0,0,0.8);
}
