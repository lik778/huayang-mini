.container {
  /* height: 100vh; */
  overflow: hidden;
  width: 100%;
  background: url('https://huayang-img.oss-cn-shanghai.aliyuncs.com/1662365704wAMdmC.jpg') no-repeat top/contain;
  /* background-size: 100% 50%; */
}

.container-top {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 75rpx 0 82rpx 0;
}

.complete-img {
  width: 222rpx;
  height: 182rpx;
}

.complete {
  margin-top: 36rpx;
  /* 字体  加粗 大小/行高 */
  font: 36rpx/50rpx PingFangSC;
  color: #FFFFFF;
}

.container-content {
  overflow: hidden;
  /* width: 690rpx; */
  height: 978rpx;
  margin: 0 30rpx 80rpx 30rpx;
  border-radius: 10rpx;
  background: url('https://huayang-img.oss-cn-shanghai.aliyuncs.com/1662367935EGLJMB.jpg') no-repeat center/cover;
}

.content-share {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 56rpx  54rpx 60rpx 54rpx;
  border-bottom:  1px solid #F1F1F1;
}

.tranining {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.punch-duraction {
  margin-bottom: 20rpx;
  font-family: DINCondensed-Bold;
  font-size: 36rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 48rpx;
  font-weight: 600;
}

.txt-time {
  min-width: 96rpx;
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 24rpx;
}

.tips {
  width: 2rpx;
  height: 82rpx;
  margin: 0 40rpx;
  background-color: #F1F1F1;
}

.sharing {
  width: 240rpx;
  height: 80rpx;
  margin-left: 72rpx;
  text-align: center;
  background: #FF4433;
  border-radius: 40rpx;
  color: #fff;
  font: 32rpx/80rpx PingFangSC-Medium;
}

.pre {
  width: 12rpx;
  height: 24rpx;
  background: url('https://huayang-img.oss-cn-shanghai.aliyuncs.com/1662373370fPphSQ.jpg') no-repeat center/cover;
}

.next {
  width: 12rpx;
  height: 24rpx;
  background: url('https://huayang-img.oss-cn-shanghai.aliyuncs.com/1662373484RZdKDB.jpg') no-repeat center/cover;
}

.disable {
  background: url('https://huayang-img.oss-cn-shanghai.aliyuncs.com/1662373484RZdKDB.jpg') no-repeat center/cover;
}

.content-calendar {
  padding: 58rpx;
}

.calendar-show-time {
  margin: 0 40rpx;
  font: 28rpx/28rpx  PingFangSC-Regular;
  text-align: center;
  color: #000000;
}

.calendar-month {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 68rpx;
}

.weeks {
  margin-bottom: 20rpx;
}
.weeks-day {
  font-size: 24rpx;
  color: #000000;
  margin-right: 68rpx;
  opacity: 0.4;
}

.weeks-day:nth-last-child(0) {
  margin-right: 0;
}

.days {
  display: flex;
  justify-content: flex-start;
  justify-content: center;
  flex-wrap: wrap;
}

.days-item {
  width: 52rpx;
  height: 52rpx;
  margin: 0 20rpx 20rpx 0;
  line-height: 52rpx;
  text-align: center;
  font-size: 24rpx;
  color: #000000;
}

.already {
  opacity: 0.5;
  border: 1px solid #FF5544;
  border-radius: 6px;
}

.current {
  background: #FF4433;
  background-image: linear-gradient(135deg, #FFF7CC 0%, #8DB3FF 100%);
  border-radius: 6px;
}

.days-item:nth-child(7n) {
  margin-right: 0;
}

.days-item:nth-last-child(7-n) {
  margin-bottom: 0;
}