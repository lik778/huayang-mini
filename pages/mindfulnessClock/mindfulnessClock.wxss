.calendar-month {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}

.weeks {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0 58rpx 33rpx;
}
.weeks-day {
  font-size: 24rpx;
  color: #000000;
  margin-right: 68rpx;
  opacity: 0.4;
}

.weeks-day:nth-last-child(1) {
  margin-right: 0;
}

.days {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin: 0 50rpx  0 54rpx;
}

.days-item {
  width: 30rpx;
  height: 24rpx;
  margin: 0 58rpx 60rpx 0;
  line-height: 30rpx;
  text-align: center;
  font-size: 24rpx;
  color: #000000;
  border: 1px dotted transparent;
}

.already {
  position: relative;
  color: #FF5544;
}

.isCurrentMonth {
  opacity: 0.3;
  color: #000000;
  font-size: 24rpx;
}

.already::after {
  display: block;
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-48%);
  width: 52rpx;
  height: 52rpx;
  border: 1px dotted #FF5544;
  border-radius: 6px;
}

.current {
  position: relative;
  animation: fadeIn 2s ease-in-out forwards;
}

.current::after {
  display: flex;
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 52rpx;
  height: 52rpx;
  transform: translate(-50%,-50%);
  background: #FF4433;
  background-image: linear-gradient(135deg, #FFA562 0%, #FF4452 100%);
  border-radius: 6px;
  /* animation: fadeIn 2s ease-in-out forwards; */
}


.current::before {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  content: '';
  width: 8rpx;
  height: 8rpx;
  background-color: #FF5544;
  border-radius: 50%;
}

.select {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 25rpx;
  height: 20rpx;
  z-index: 999;
}

.days-item:nth-child(7n) {
  margin-right: 0;
}

