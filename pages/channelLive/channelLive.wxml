<view class="channel-live" style="padding-top: {{statusBarHeight}}px">
    <view class="head">视频号</view>
    <view class="channel-item">
        <view class="title">直播信息</view>
        <view class="main">视频号名称：{{noticeInfo.nickname}}</view>
        <view>直播主题：{{liveInfo.description}}</view>
        <image src="{{liveInfo.headUrl}}"></image>
        <button bindtap="openLive">打开视频号直播</button>
    </view>
    <view class="channel-item">
        <view class="title">直播预约信息</view>
        <view class="main">视频号名称：{{noticeInfo.nickname}}</view>
        <image src="{{noticeInfo.headUrl}}"></image>
        <button bindtap="reserveLive">预约直播</button>
    </view>
    <view class="channel-item">
        <view class="title">其他能力</view>
<!--        <button bindtap="openChannelEvent">打开视频号活动页</button>-->
        <button bindtap="openChannelVideo">打开视频号视频</button>
    </view>

    <button bindtap="onGuideTap">订阅消息（template id）</button>

    <form class="custom-form-bottom" :report-submit="true" bindsubmit="formSubmit">
        <button hover-class="none" form-type="submit" bindtap="submit">订阅消息（form id）</button>
    </form>

    <!-- 授权弹窗 -->
    <authModule show="{{didShowAuth}}" bind:authCancelEvent="authCancelEvent" bind:authCompleteEvent="authCompleteEvent">
    </authModule>
</view>
