/* mine/wallet/wallet.wxss */
.wollet {}

.wollet-card {
  margin: 0 32rpx;
  width: calc(100% - 64rpx);
  height: 344rpx;
  background: rgba(242, 212, 184, 1);
  box-shadow: 0px 20px 32px -16px rgba(201, 156, 112, 0.3);
  border-radius: 16px;
  position: relative;
  margin-top: 28rpx;
}

.wollet-vip-card {
  background: linear-gradient(270deg, rgba(248, 232, 211, 1) 0%, rgba(248, 221, 194, 1) 100%);
  position: relative;
}

.wollet-box {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 20;
}

.vip-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 344rpx;
  height: 344rpx;
  z-index: 10;
}

.title {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 40rpx 24rpx 40rpx;
}

.title-left {
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.8);
  line-height: 18px;
}

.title-right {
  display: flex;
  align-items: center;
}

.title-right text {
  font-size: 14px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.8);
  line-height: 14px;
}

.title-right image {
  width: 12rpx;
  height: 24rpx;
  padding-left: 16rpx;
}

.money-line {
  display: flex;
  align-items: center;
  padding: 0 40rpx;
}

.money-left image {
  width: 32rpx;
  height: 32rpx;
  padding-right: 16rpx;
  vertical-align: bottom;
}

.money-left {
  display: flex;
  align-items: center;
}

.money-left text {
  font-size: 20px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.8);
  line-height: 20px;
}

.money-middle {
  width: 1px;
  height: 28rpx;
  background: #000000;
  margin: 0 32rpx;
}

.money-right {
  font-size: 20px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.8);
  line-height: 20px;
}

.money-right image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: bottom;
  padding-right: 16rpx;
}

.button-line {
  padding: 92rpx 40rpx 0 40rpx;
  display: flex;
  justify-content: space-between;
}

.button-line-left {
  font-size: 16px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(79, 59, 38, 0.8);
  line-height: 14px;
  padding-top: 32rpx;
}

.button-line-right {
  width: 160rpx;
  height: 72rpx;
  border-radius: 36rpx;
  opacity: 0.8;
  border: 2px solid rgba(0, 0, 0, 1);
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  line-height: 72rpx;
  color: rgba(0, 0, 0, 0.8);
  text-align: center;
}

/* 列表 */
.invite-list {
  padding: 58rpx 48rpx 0 48rpx;
}

.invite-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 40rpx;
}

.invite-item-left {
  display: flex;
  align-items: center;
  font-size: 20px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 28px;
}

.invite-item-left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.invite-item-right {
  font-size: 20px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 28px;
}