.banner image {
  width: 100%;
  height: 632rpx;
  vertical-align: bottom;

}

.canvas {
  width: calc(100% - 32px);
  height: 457px;
  margin: 0 auto;
  margin-top: -154rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.button-line {
  display: flex;
  align-items: center;
  padding: 46rpx 32rpx 100rpx 32rpx;
  justify-content: space-between;
}

.share {
  width: 328rpx;
  height: 88rpx;
  background: rgba(255, 68, 51, 1);
  border-radius: 44rpx;
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 88rpx;
  text-align: center;
  position: relative;
}

.share-button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.save {
  width: 320rpx;
  height: 80rpx;
  border-radius: 44rpx;
  border: 2px solid rgba(255, 68, 51, 1);
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(255, 68, 51, 1);
  line-height: 80rpx;
  text-align: center;
}