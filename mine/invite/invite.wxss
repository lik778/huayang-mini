/* mine/invite/invite.wxss */
.invite {
  max-height: 100vh;
}

.banner image {
  width: 100%;
  height: 316px;
  vertical-align: bottom;
}

.canvas {
  opacity: 0;
  position: absolute;
  left: 0;
  top: -2400px;
}

.button-line {
  display: flex;
  align-items: center;
  padding: 16px 32rpx 12px 32rpx;
  justify-content: space-between;
  position: relative;
  top: -77px;
}

.share {
  width: 328rpx;
  height: 40px;
  background: rgba(255, 68, 51, 1);
  border-radius: 44rpx;
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 40px;
  text-align: center;
  position: relative;
}

.share-button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.save {
  width: 320rpx;
  height: 40px;
  border-radius: 44rpx;
  border: 2px solid rgba(255, 68, 51, 1);
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(255, 68, 51, 1);
  line-height: 40px;
  text-align: center;
}

/* canvas定位 */
.canvas-html {
  display: flex;
  justify-content: center;
  position: relative;
  top: -77px;
  margin: 0 auto;
}

.canvas-img {

  width: 100%;
  height: 100%;
}

.bg-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.head-icon-line {
  position: absolute;
  display: flex;
}

.head-icon-img image {
  border: 2px solid #fff;
  border-radius: 50%;
}

.head-icon-top {
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
}

.head-icon-bottom {
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(221, 221, 221, 1);
}


.price {
  position: absolute;
}

.old-price {
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-decoration: line-through;
}

.new-price {
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(238, 0, 0, 1);
}


.erweima {
  position: absolute;
}

.erweima image {
  border-radius: 50%;
  vertical-align: bottom;
}