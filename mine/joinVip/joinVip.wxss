    align-items: center;
    padding-bottom: 40rpx;
}

.mall-title view image {
    width: 62rpx;
    height: 62rpx;

}

.mall-title view:nth-child(2) {
    font-size: 24px;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: rgba(238, 187, 136, 1);
    line-height: 22px;
    padding-top: 24rpx;
    padding-bottom: 30rpx;
}

.mall-title view:nth-child(3) {
    font-size: 16px;
    font-family: PingFangSC-Regular, PingFang SC;
