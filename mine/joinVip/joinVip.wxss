    justify-content: space-between;
    flex-wrap: wrap;
}

.mall-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(238, 187, 136, 1);
    line-height: 16px;
    margin-bottom: 44rpx;
    width: 160rpx;
}

.mall-item:nth-child(2n-1) {
    margin-right: 136rpx;
}

.mall-item image {
    width: 72rpx;
    height: 72rpx;
    vertical-align: bottom;
    padding-bottom: 22rpx;
}

.mall-item view view {
    text-align: center;
    line-height: 20px;
}

.desc {
    display: flex;
    justify-content: center;
    font-size: 18px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(238, 187, 136, 1);
    line-height: 18px;
    padding-top: 80rpx;
    padding-bottom: 102rpx;
}

.button-line {
    padding: 0 60rpx;
}

.button {
    width: 100%;
    height: 110rpx;
    background: linear-gradient(90deg, #FFDDAA 0%, #DDAA77 100%);
    border-radius: 56rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
    position: relative;
}

.button view {
    text-align: center;
}

.button button {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    z-index: 30;
}

.button view:first-child {
    font-size: 18px;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: rgba(37, 32, 24, 1);
    line-height: 18px;
}

.button view:nth-child(2) {
    font-size: 14px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(105, 92, 71, 1);
    line-height: 14px;
    padding-top: 8rpx;
}

.bottom {
    padding-top: 38rpx;
    padding-bottom: 68rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bottom text {
    font-size: 16px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(255, 221, 170, 1);
    line-height: 16px;
    padding-left: 22rpx;
}

.van-checkbox {
    border: none;
    border-radius: 2px;
    background: #fff;
}