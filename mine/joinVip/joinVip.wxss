/* mine/joinVip/joinVip.wxss */
.join-vip {
    background: #161616;
}

.banner {
    position: relative;
    width: 100vw;
    height: 564rpx;
}

.bg {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 10;
}

.bg image {
    width: 100%;
    height: 100%;
    vertical-align: bottom;
}

.banner-main {
    position: absolute;
    top: 208rpx;
    z-index: 20;
    padding: 0 64rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.banner-main image {
    width: 202rpx;
    height: 80rpx;
    vertical-align: bottom;
}

.banner-main text {
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(22, 22, 22, 1);
    line-height: 22px;
    padding-top: 32rpx;
}


.main {
    padding-top: 96rpx;
}

.main-title {
    display: flex;
    align-items: center;
    justify-content: center;
}

.main-title-line {
    width: 128rpx;
    height: 0.5px;
    background: #EABE8B;
}

.main-title-text {
    font-size: 32px;
    font-family: PingFangSC-Thin, PingFang SC;
    font-weight: 100;
    color: rgba(235, 191, 140, 1);
    line-height: 32px;
    padding: 0 26rpx;
}

.main-course {
    padding-top: 64rpx;
}

.course-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 40rpx;
}

.course-title view image {
    width: 70rpx;
    height: 70rpx;
    vertical-align: bottom;
    padding-bottom: 24rpx;
}

.course-title view:nth-child(2) {
    font-size: 24px;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: rgba(238, 187, 136, 1);
    line-height: 24px;
    padding-bottom: 24rpx;
}

.course-title view:nth-child(3) {
    font-size: 16px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(235, 191, 140, 1);
    line-height: 16px;
}

.course-main {
    margin: 0 32rpx;
    background: rgba(42, 42, 42, 0.41);
    border-radius: 20rpx;
    padding: 48rpx 0;
}

.course-main-common {
    display: flex;
