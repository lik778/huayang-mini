/* mine/withdraw/withdraw.wxss */
.withdraw {}

.input-module {
  padding: 64rpx 40rpx;
  padding-bottom: 0;
}

.input-module-title {
  font-size: 24px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  line-height: 33px;
  padding-bottom: 44rpx;
}

.input-box {
  position: relative;
}

.input-box input {
  width: calc(100% - 108rpx);
  height: 132rpx;
  line-height: 132rpx;
  font-size: 48px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  border: 1px solid rgba(214, 214, 214, 1);
  border-radius: 12rpx;
  padding-left: 108rpx;
}

.input-box text {
  position: absolute;
  left: 32rpx;
  bottom: 24rpx;
  font-size: 36px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.4);
  line-height: 36px;
}

.input-note {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 104rpx;
  padding-top: 48rpx;
}

.input-note-left {
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.5);
  line-height: 16px;
}

.input-note-right {
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(37, 155, 241, 1);
  line-height: 16px;
}


.button-line-title {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.5);
  line-height: 14px;
  text-align: center;
  padding-bottom: 68rpx;
}

.button {
  width: 630rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  background: rgba(255, 68, 51, 1);
  font-size: 20px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin: 0 auto;
}

.none-button {
  background: rgba(182, 182, 182, 1);
  color: rgba(255, 255, 255, 1);
}