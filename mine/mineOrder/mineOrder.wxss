/* mine/mineOrder/mineOrder.wxss */
.mine-order {}

.main {
  margin: 0 32rpx;
  margin-top: 40rpx;
}

.main-item {
  padding-bottom: 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  margin-bottom: 34rpx;
}

.main-item-top {
  display: flex;
  align-items: flex-start;
}

.main-item-left {
  width: 160rpx;
  height: 160rpx;
}

.main-item-left image {
  width: 160rpx;
  height: 160rpx;
  vertical-align: bottom;
  border-radius: 8rpx;
  padding-top: 2px;
}

.main-item-right {
  padding-left: 24rpx;
}

.item-top {
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(0, 0, 0, 1);
  line-height: 22px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-bottom {
  padding-top: 24rpx;
}

.order-price {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(131, 131, 131, 1);
  line-height: 18px;
}

.order-time {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.5);
  line-height: 16px;
  padding-top: 16rpx;
}

.button {
  width: 196rpx;
  height: 72rpx;
  border-radius: 36rpx;
  border: 1px solid rgba(255, 68, 51, 1);
  box-sizing: border-box;
  text-align: center;
  line-height: 72rpx;
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(255, 68, 51, 1);
  margin-left: 62rpx;
}

.main-item-bottom {
  margin-top: 32rpx;
}

.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
}

.no-data image {
  width: 110rpx;
  height: 120rpx;
}

.text-tip {
  font-family: 'PingFangSC-Regular', 'PingFang SC';
  font-weight: 400;
  font-style: normal;
  font-size: 16px;
  color: #AAAAAA;
  padding-top: 20rpx;
}