@import "../../assets/css/common.wxss";
.person-bootcamp {
    padding-bottom: 210rpx;
}
.no-data-tips {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.no-data-tips > image {
    margin-top: 100rpx;
    width: 320rpx;
    height: 230rpx;
    font-size: 0;
}
.no-data-tips > text {
    font: 36rpx/44rpx Helvetica;
    color: #999;
}
.layout {
    margin: 80rpx 0 30rpx 30rpx;
    font:  500 44rpx/60rpx PingFangSC;
}
.camp-item {
    position: relative;
    height: 320rpx;
    margin: 20rpx 30rpx;
    border-radius: 4rpx;
}

.camp-item:last-child {
    margin-bottom: 0;
}

.camp-item>image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.camp-item-main {
    width: calc(100% - 60rpx);
    position: absolute;
    left: 30rpx;
    top: 52rpx;
}

.camp-item-title {
    font-size: 44rpx;
    font-family: PingFang-SC-Bold, PingFang-SC;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    line-height: 44rpx;
    padding-bottom: 30rpx;
}

.camp-subtitle {
    font-size: 30rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 32rpx;
}

.camp-button {
    position: absolute;
    left: 30rpx;
    bottom: 52rpx;
    width: 200rpx;
    height: 60rpx;
    border-radius: 999rpx;
    border: 3rpx solid rgba(255, 255, 255, 1);
    font-size: 16px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    text-align: center;
    line-height: 60rpx;
}
.more-btn {
    position: fixed;
    bottom: 60rpx;
    left: 0;
    right: 0;
    width: 690rpx;
    height: 96rpx;
    margin: 0 auto;
    border-radius: 999rpx;
    background: #CC0000;
    color: white;
    font: 500 40rpx/96rpx PingFangSC;
    text-align: center;
}
.more-btn:active {
    opacity: 0.8;
}
