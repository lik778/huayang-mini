/* 畅学卡售前页 */
@import "../../assets/css/common.wxss";
.join-video-member {
    padding-bottom: 338rpx;
}

.preview-video {
    height: 420rpx;
    width: 100vw;
}

.member-card {
    width: 650rpx;
    height: 282rpx;
    margin: 40rpx auto 58rpx;
    box-sizing: border-box;
    padding: 40rpx;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1611889498TCmAxy.jpg") no-repeat center;
    background-size: contain;
}

.card-title {
    font: 500 40rpx/40rpx PingFangSC;
    color: #834B25;
}

.card-desc {
    margin-top: 20rpx;
    font: 32rpx/32rpx PingFangSC;
}

/* 权益 */
.interest {
    margin: 0 30rpx 48rpx;
    font: 600 52rpx/52rpx PingFangSC;
}

.interest > text {
    font: bold 88rpx/88rpx Condensed;
    color: #E2B180;
}

.interest-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 30rpx 60rpx;
}

.interest-icon {
    width: 96rpx;
    height: 96rpx;
}

.interest-detail {
    width: 574rpx;
    font: 500 32rpx/32rpx PingFangSC;
}

.interest-text {
    margin-top: 28rpx;
    font: 28rpx/28rpx PingFangSC;
}

/* 精品课 */
.course {
    margin: 80rpx 30rpx 0;
    font: 500 52rpx/52rpx PingFangSC;
}

.course-item {
    display: flex;
    justify-content: space-between;
    margin: 40rpx 30rpx 0;
}

.teacher-image {
    height: 220rpx;
    width: 166rpx;
}

.course-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 500rpx;
}

.course-name {
    font: 500 32rpx/32rpx PingFangSC;
}

.course-desc {
    margin: 20rpx 0;
    font: 28rpx/28rpx PingFangSC;
}

.course-teacher-info {
    font: 28rpx/28rpx PingFangSC;
    color: #666666;
}

.visited {
    font: 24rpx/24rpx PingFangSC;
    color: rgba(0,0,0, 0.6);
}

.share-btn {
    position: fixed;
    bottom: 206rpx;
    right: 30rpx;
    width: 314rpx;
    height: 80rpx;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1612331610edgRGS.jpg") no-repeat center;
    background-size: contain;
}
.share-btn:active {
    opacity: 0.9;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 16rpx 30rpx 52rpx;
    background: white;
}

.footer-wrap {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 96rpx;
    padding: 10rpx 0 12rpx;
    box-sizing: border-box;
    color: white;
    text-align: center;
    border-radius: 999rpx;
    font: 500 40rpx/36rpx PingFangSC;
    background: #CC0000;
}

.line-price {
    text-decoration: line-through;
    color: rgba(255,255,255, 0.8);
    font: 500 28rpx/28rpx PingFangSC;
}
