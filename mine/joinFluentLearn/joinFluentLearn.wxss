/* 畅学卡售前页 */
@import "../../assets/css/common.wxss";

.join-video-member {
    padding-bottom: 338rpx;
}

.preview-video {
    height: 420rpx;
    width: 100vw;
}

.member-card {
    width: 650rpx;
    height: 280rpx;
    margin: 40rpx auto 58rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    padding: 40rpx;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1612780577ayAFJu.jpg") no-repeat center;
    background-size: contain;
}

.card-title {
    font: 500 40rpx/40rpx PingFangSC;
    color: #FFE8D0;
}

.card-desc {
    margin-top: 20rpx;
    font: 32rpx/32rpx PingFangSC;
    color: #FFFFFF;
}

/* 权益 */
.interest {
    margin: 0 30rpx 40rpx;
    width: 470rpx;
    height: 88rpx;
}

.interest-item {
    display: flex;
    justify-content: space-between;
    margin: 0 52rpx 60rpx 30rpx;
}

.interest-icon {
    width: 96rpx;
    height: 96rpx;
}

.interest-detail {
    font-size: 36rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #000000;
    line-height: 36rpx;
    width: 554rpx;
    /* font: 500 32rpx/32rpx PingFangSC; */
}

.interest-text {
    width: 100%;
    margin-top: 20rpx;
    /* font: 28rpx/40rpx PingFangSC; */
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #000000;
    line-height: 48rpx;
}

/* 精品课 */
.course {
    margin: 80rpx 30rpx 0;
    font: 500 52rpx/52rpx PingFangSC;
}

.course-item {
    display: flex;
    justify-content: space-between;
    margin: 40rpx 30rpx 0;
}

.cover-image {
    height: 220rpx;
    width: 166rpx;
    border-radius: 8rpx;
}

.course-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 500rpx;
}

.course-name {
    /* font: 500 32rpx/32rpx PingFangSC; */
    font-size: 36rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #000000;
    line-height: 36rpx;
}

.course-desc {
    /* margin: 20rpx 0; */
    /* font: 28rpx/32rpx PingFangSC; */
    margin-top: 28rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #000000;
    line-height: 32rpx;
}

.course-teacher-info {
    /* font: 28rpx/28rpx PingFangSC;
    color: #666666; */
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(0, 0, 0, 0.6);
    line-height: 32rpx;
}

.visited {
    font: 24rpx/24rpx PingFangSC;
    color: rgba(0, 0, 0, 0.6);
}

.share-btn {
    position: fixed;
    bottom: 206rpx;
    right: 30rpx;
    width: 314rpx;
    height: 80rpx;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1612331610edgRGS.jpg") no-repeat center;
    background-size: contain;
}

.share-btn:active {
    opacity: 0.9;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 16rpx 30rpx 52rpx;
    background: white;
}

.footer-wrap {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 96rpx;
    padding: 10rpx 0 12rpx;
    box-sizing: border-box;
    color: white;
    text-align: center;
    border-radius: 999rpx;
    font: 500 40rpx/36rpx PingFangSC;
    background: #CC0000;
}

.line-price {
    text-decoration: line-through;
    color: rgba(255, 255, 255, 0.8);
    font: 500 28rpx/28rpx PingFangSC;
}


/* 购买按钮 */
.button-module {
    height: 126rpx;
    display: flex;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    left: 0;
    width: calc(100vw - 60rpx);
    /* height: 120rpx; */
    background: #fff;
    align-items: center;
    z-index: 50;
    padding: 0 30rpx;
}

.contact-module {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.contact-module image {
    width: 48rpx;
    height: 48rpx;
    vertical-align: bottom;
}

.contact-module text {
    font-size: 22rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #777777;
    line-height: 22rpx;
    padding-top: 12rpx;
}

.button-module button {
    font-size: 14px;
}

.button-module-type-two {
    width: 570rpx;
    height: 96rpx;
    border-radius: 999rpx;
    background: #CC0000;
    color: #FFFFFF;
    font-size: 40rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
    line-height: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.button-module-type-two text:first-child {
    padding: 10rpx 0;
}

.button-module-type-two text:last-child {
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8);
    line-height: 28rpx;
    text-decoration: line-through;
}

.button-module-type-one {
    display: flex;
}

.button-module-type-old-price {
    width: 276rpx;
    height: 96rpx;
    border-radius: 999rpx;
    border: 1px solid #CC0000;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #CC0000;
    line-height: 32rpx;
    justify-content: center;
}

.button-module-type-old-price text:last-child {
    font-size: 24rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #CC0000;
    line-height: 24rpx;
    padding-top: 8rpx;
    opacity: 0.7;
}

.button-module-type-invite-price {
    width: 276rpx;
    height: 96rpx;
    border-radius: 999rpx;
    border: 1px solid #CC0000;
    background: #CC0000;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #fff;
    line-height: 32rpx;
    justify-content: center;
    margin-left: 20rpx;
}

.button-module-type-invite-price text:last-child {
    font-size: 24rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 600;
    color: #FFFFFF;
    line-height: 24rpx;
    padding-top: 8rpx;
    opacity: 0.7;
}

/* 邀请码购买弹窗 */
.invite-code-box {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    background: #fff;
    z-index: 80;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 20rpx 20rpx 0 0;
    padding-bottom: 45px;
    animation: slideContentUp 0.25s linear;
}

.close-code-box {
    animation: slideContentDown 0.25s linear forwards;
}


.invite-code-bg {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.67);
    z-index: 60;
    animation: slideContentBgUp 0.25s linear;
}

.bg-code-box-close {
    animation: slideContentBgDown 0.25s linear;
}

.invite-code-box input {
    width: calc(100% - 104rpx);
    height: 44px;
    border-radius: 8rpx;
    border: 0.5px solid #979797;
    padding-left: 24rpx;
    background: #F9F9F9;
    margin-bottom: 28px;
}

.invite-code-box input::placeholder {
    font-size: 18px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #000000;
    line-height: 18px;
    opacity: 0.4;
}

.invite-code-text {
    width: calc(100% - 80rpx);
    padding: 35px 40rpx 10px;
    font-size: 18px;
    font-family: PingFang-SC-Bold, PingFang-SC;
    font-weight: bold;
    color: #000000;
    line-height: 32px;
}

.invite-code-buy-button {
    width: calc(100% - 80rpx);
    height: 48px;
    border-radius: 999rpx;
    font-size: 20px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 48px;
    background: #CC0000;
    text-align: center;
}

.invite-code-module-get {
    font-size: 20px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 400;
    color: #CC0000;
    line-height: 20px;
    padding-top: 28px;
}

@keyframes slideContentUp {
    from {
        transform: translateY(100%);
        opacity: 0.5;
        /*设置为正数则底部弹出来，负数则相反*/
    }

    to {
        transform: translateY(0%);
        opacity: 1;
    }
}

@keyframes slideContentBgUp {
    from {
        opacity: 0;

    }

    to {
        opacity: 1;
    }
}

@keyframes slideContentBgDown {
    from {
        opacity: 1;
    }

    to {
        opacity: 0;
    }
}

@keyframes slideContentDown {
    from {
        transform: translateY(0%);
        opacity: 1;
    }

    to {
        transform: translateY(100%);
        opacity: 0;
    }
}