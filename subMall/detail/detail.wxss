@import "../../assets/css/common.wxss";
.detail {
    overflow: hidden;
    padding-bottom: 120rpx;
    background: rgba(245, 245, 245, 1);
    font-size: 0;
}
.banner {
    position: relative;
}
.swiper-item {
    width: 750rpx;
    height: 750rpx;
}
.swiper-image {
    width: inherit;
    height: inherit;
}
.swp-dot {
    position: absolute;
    bottom: 24rpx;
    right: 24rpx;
}
.square-12 {
    width: 80rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    background-color: rgba(0,0,0,.4);
    border-radius: 915rpx;
    font-size: 28rpx;
    color: white;
    z-index: 100;
}
.info {
    padding: 40rpx 32rpx;
    margin-bottom: 24rpx;
    background: white;
}
.title {
    margin-bottom: 24rpx;
    font-size: 40rpx;
    font-weight: 500;
    color: rgb(0,0,0);
}
.price-info {
    font-weight: 500;
    color: black;
}
.unit {
    font-size: 36rpx;
}
.price {
    font-size: 48rpx;
}
.detail-content {
    background: white;
}
.detail-image {
    width: 100%;
}
.fixed-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    height: 120rpx;
    background: rgba(255, 68, 51, 1);
    color: white;
}
.fixed-btn:active {
    opacity: 0.9;
}
.btn-unit {
    font-size: 28rpx;
}
.btn-price {
    font-size: 40rpx;
}

