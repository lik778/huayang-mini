.temporary {
    box-sizing: border-box;
    padding: 30rpx;
    height: 100vh;
}
.card {
    position: relative;
    margin-bottom: 30rpx;
    border-radius: 18rpx;
    box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.1);
    height: 510rpx;
}
.temporaryVideo {
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 690rpx;
    height: 400rpx;
}
.fix {
    position: absolute;
    bottom: 200rpx;
    left: 40rpx;
    color: white;
    font: 700 40rpx/40rpx PingFangSC;
}
.fix > view {
    margin-top: 20rpx;
}
.tag {
    font: 600 30rpx/30rpx PingFangSC;
}
.content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
}
