/* subMall/category/category.wxss */
.custom-tab-class {
    height: 92rpx !important;
    flex-basis: 20% !important;
    padding: 0 !important;
    font-size: 32rpx !important;
    font-weight: 500 !important;
    color: rgba(0,0,0,.6) !important;
}
.custom-tab-active-class {
    font-size: 32rpx !important;
    font-weight: 500 !important;
    color: rgb(0,0,0) !important;
}
.van-hairline--top-bottom:after {
    border-width: 0 !important;
}
.van-tabs__line {
    height: 4rpx;
    bottom: 18rpx !important;
    background: rgb(255, 68, 51) !important;
}
.category {

}

.product-item {
    margin: 10rpx 32rpx 40rpx;
}
.preview-image {
    overflow: hidden;
}
.normal-mode {
    width: 688rpx;
    height: 688rpx;
    border-radius: 24rpx 24rpx 6rpx 6rpx;
}
.product-name {
    margin: 24rpx 0 14rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: rgb(0,0,0)
}
.product-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
}
.price {
    font-size: 32rpx;
}
.unit {
    font-size: 24rpx;
}
.buying {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 160rpx;
    height: 72rpx;
    box-sizing: border-box;
    border: 2rpx solid rgba(255, 68, 51, 1);
    border-radius: 915rpx;
    color: rgba(255, 68, 51, 1);
    font-size: 32rpx;
}
.buying:active {
    opacity: 0.8;
}
