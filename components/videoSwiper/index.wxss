.container {
  width: 100%;
  height: 100%;
}

.video-swiper {
  width: 100vw;
  height: 952rpx;
}

.video_item {
  height: 800rpx;
  width: 600rpx;
  border-radius: 12rpx 12rpx 0px 0px;
  overflow: hidden;
  vertical-align: bottom;
}


/* 视频标签 */
.swiper-video-sign {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 22rpx;
  background: #FF4433;
  border-radius: 0px 6rpx 0px 0px;
  padding: 8rpx 20rpx;
}

/* 暂停按钮 */
.pause-icon image {
  width: 132rpx;
  height: 132rpx;
  vertical-align: bottom;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -60rpx;
  margin-left: -60rpx;
}

/* 视频标题 */
.swiper-video-desc {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #000000;
  line-height: 40rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  padding: 0 28rpx;
  width: calc(100% - 38rpx);
  box-sizing: border-box;
  background: #fff;
  text-align: justify;
  box-shadow: 0px 6rpx 12rpx 0px rgba(0, 0, 0, 0.06);
  border-radius: 0px 0px 12rpx 12rpx;
}

/* swiper知识点 */
.swiper-video-dot-list {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 28rpx;
}

.swiper-video-dot-item {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #D8D8D8;
  margin-right: 12rpx;
}