@import "../../assets/css/common.wxss";
.task-layout {
    position: relative;
    display: flex;
    justify-content: space-between;
    padding: 60rpx 40rpx;
    margin-bottom: 12rpx;
    box-sizing: border-box;
    background: white;
    font-size: 0;
}

.user-avatar {
    width: 88rpx;
    height: 88rpx;
    border-radius: 999rpx;
}

.user-avatar:active {
    opacity: 0.9;
}

.task-content {
    overflow: hidden;
    width: 562rpx;
}

.username {
    font: 500 36rpx/36rpx PingFangSC;
}

.launch-date {
    margin: 28rpx 0;
    color: #9F9F9F;
    font: 24rpx/24rpx PingFangSC;
}

.desc {
    margin-bottom: 30rpx;
    font: 32rpx/44rpx PingFangSC;
}

.media-content {

}

.media-content-images {
    display: flex;
    flex-wrap: wrap;
}

.review-image {
    width: 240rpx;
    height: 240rpx;
    margin: 0 10rpx 10rpx 0
}

.simple-image {
    width: 100%;
    max-width: 500rpx;
    max-height: 400rpx;
}

.media-content-video {
    position: relative;
}

.review-video {
    width: 100%;
    height: 100%;
}

.audio-callback-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    width: 466rpx;
    height: 100rpx;
    box-sizing: border-box;
    padding: 0 36rpx 0 10rpx;
    border-radius: 999rpx;
    background: #F5F3F3;
}

.audio-callback-box:active {
    opacity: 0.9;
}

.audio-callback-icon {
    width: 80rpx;
    height: 80rpx;
}

.audio-callback-sound-wave {
    width: 190rpx;
    height: 32rpx;
}

.audio-callback-times {
    font: 40rpx/40rpx PingFangSC;
}

.tag {
    display: inline-block;
    margin: 30rpx 0;
    height: 56rpx;
    font: 32rpx/56rpx PingFangSC;
    color: #BE6F36;
    padding: 0 20rpx;
    border-radius: 24rpx 2rpx;
    background: #F8E2D3;
}

.tag:active {
    opacity: 0.9;
}

.operate-layout {
    display: flex;
    align-items: flex-end;
}

.thumb-layout, .share-layout {
    display: flex;
    align-items: flex-end;
    min-width: 128rpx;
    font: 28rpx/36rpx PingFangSC;
    color: #666;
}

.thumb-layout > text {
    margin-right: 20rpx;
}

.share-layout {
    position: relative;
}

.thumb-layout:active, .share-layout:active {
    opacity: 0.9;
}

.share-btn {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    padding: 0;
    margin: 0;
    opacity: 0;
    width: 120rpx;
    height: 48rpx;
    background: transparent;
}

.thumb {
    width: 52rpx;
    height: 52rpx;
    margin-right: 8rpx;
}

.share {
    width: 52rpx;
    height: 52rpx;
    margin-right: 12rpx;
}

.delete-layout {
    height: 48rpx;
    display: flex;
    align-items: flex-end;
    margin: 0 40rpx 4rpx;
    font: 28rpx/28rpx PingFangSC;
    color: #729CBD;
}

.delete-layout:active {
    opacity: 0.9;
}

.teacher-comment {

}

.teacher-title {
    margin: 60rpx 0 0;
    font: 500 28rpx/28rpx PingFangSC;
}

.teacher-info {
    display: flex;
    align-items: center;
    margin: 30rpx 0 20rpx;
    font: 500 28rpx/28rpx PingFangSC;
}

.teacher-info > text {
    width: 400rpx;
}

.teacher-headimage {
    height: 48rpx;
    width: 48rpx;
    margin-right: 22rpx;
    border-radius: 999rpx;
}

.teacher-desc {
    margin-bottom: 20rpx;
    font: 28rpx/40rpx PingFangSC;
}

.teacher-launch-date {
    font: 24rpx/34rpx PingFangSC;
    color: #9F9F9F;
}

.tip-label {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 184rpx;
    left: 84rpx;
    width: 438rpx;
    height: 188rpx;
    background: url("https://huayang-img.oss-cn-shanghai.aliyuncs.com/1608001134XJoNTg.jpg") no-repeat 100% 100%;
    background-size: contain;
    color: white;
    font: 32rpx/48rpx PingFangSC;
}

.tip-label > text {
    padding-top: 28rpx;
}

.tip-label > text:active {
    opacity: 0.9;
}
