}


/* 发布弹幕 */
.publish-barrage-module {
  height: 500rpx;
}

.publish-barrage-module-cover {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 30;
  background: rgba(0, 0, 0, 0.67);
}

.publish-barrage-module-main {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 35;
  border-radius: 20rpx 20rpx 0px 0px;
  width: 100vw;
  background: #fff;
}

.publish-barrage-title {
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #000000;
  line-height: 40rpx;
  text-align: center;
  padding: 54rpx 0 40rpx 0;
}

.publish-barrage-textarea {
  width: calc(100% - 80rpx);
  padding: 20rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  margin: 0 auto;
  height: 160rpx;
  border-radius: 8rpx;
  border: 0.5px solid #ddd;
}

.publish-barrage-button-line {
  display: flex;
  width: calc(100% - 60rpx);
  justify-content: center;
  margin: 0 auto;
  padding-top: 56rpx;
  padding-bottom: 60rpx;
}

.publish-barrage-cancel {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #CC0000;
  width: 330rpx;
  height: 88rpx;
  border: 1px solid #CC0000;
  text-align: center;
  line-height: 88rpx;
  border-radius: 999rpx;
}

.publish-barrage-sure {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 600;
  color: #fff;
  width: 330rpx;
  height: 88rpx;
  border: 1px solid #CC0000;
  text-align: center;
  line-height: 88rpx;
  border-radius: 999rpx;
  background: #CC0000;
  margin-left: 30rpx;
}

.publish-barrage-textarea-module {
  position: relative;
}

.publish-barrage-textarea-module text {
  position: absolute;
  right: 50rpx;
  bottom: 2rpx;
  color: #999;
  font-size: 12px;
}