.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  background: white;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: -1rpx;
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 74rpx;
  height: 74rpx;
  margin-bottom: 4rpx;
}

.tab-bar-item cover-image.ground {
  width: 110rpx;
}

.tab-bar-item cover-view {
  font-size: 32rpx;
}

.tab-bar-item .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}
